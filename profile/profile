SET_TMP_PATH="$(echo "$TMP_BIN_PATH" | tr ':' '\n' | grep -v '^$' | grep -Fv '..' | awk '!seen[$0]++' | grep -v '^$' | tr '\n' ':' | sed 's|:.:|:.|g;s|:$||g')"
