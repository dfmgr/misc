#!/usr/bin/env bash
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version       : 031120210815-git
# @Author        : Jason Hempstead
# @Contact       : jason@casjaysdev.com
# @License       : WTFPL
# @ReadME        : vercel_app --help
# @Copyright     : Copyright: (c) 2021 Jason Hempstead, CasjaysDev
# @Created       : Thursday, Mar 11, 2021 08:15 EST
# @File          : vercel_app
# @Description   : vercel wrapper app with rm all unaliased deployments
# @TODO          :
# @Other         :
# @Resource      :
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
PROG="vercel_app"
USER="${SUDO_USER:-${USER}}"
HOME="${USER_HOME:-${HOME}}"
SRC_DIR="${BASH_SOURCE%/*}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
#set opts

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Main function
__version() { app_version; }
__help() {
  app_help "Usage: vercel_app [command]" \
    "-v, --version          -  display version" \
    "-h, --help             -  display help"
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
__init() {
  if builtin type -P npm 2>/dev/null && ! builtin type -P vercel 2>/dev/null; then
    npm i -g vercel &>/dev/null &&
      builtin type -P vercel 2>/dev/null &&
      vercel "$*"
    return $?
  else
    return 1
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
__vercel_app() {
  if [[ -f "$(builtin type -P vercel 2>/dev/null)" ]]; then
    vercel "$*"
    return $?
  elif [[ -f "$(builtin type -P now 2>/dev/null)" ]]; then
    now "$*"
    return $?
  else
    printf_red "Neither vercel nor now is installed"
    return 1
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
main() {
  if [ -f "$SRC_DIR/functions.bash" ]; then local DIR="$SRC_DIR"; else local DIR="$HOME/.local/bin"; fi
  if [[ -f "$DIR/functions.bash" ]]; then
    . "$DIR/functions.bash"
  else
    printf "\t\t\\033[0;31m%s \033[0m\n" "Couldn't source the functions file from $DIR"
    return 1
  fi
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  case $1 in
  -v | --version) __version ;;
  -h | --help) __help ;;
  esac
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  __init "$*"
  if [[ $# = 0 ]]; then
    __vercel_app ls
    return $?
  else
    if [[ "$1" = "--all" ]]; then
      for app in $(__vercel_app ls 2>&1 | grep -Ev ' Fetching.*|Vercel CLI.*|>.*|project         latest|^$' | awk '{print $1}'); do
        __vercel_app rm "$app" --safe --yes
      done && return 0 || return 1
    else
      __vercel_app rm $1 --safe --yes && return 0 || return 1
    fi
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# execute function
main "$@"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
exit $?
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# end
