# @Created       : Thursday, Mar 11, 2021 16:04 EST
# @File          : renameFilesRecursively
# @Description   : Recursively rename files
# @Changelog     : Refactored for self-contained operation
# @TODO          :
# @Other         :
# @Resource      :
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Script variables
PROG="renameFilesRecursively"
VERSION="202601061012-git"
USER="${SUDO_USER:-${USER}}"
HOME="${USER_HOME:-${HOME}}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Environment Detection
__get_os() {
  case "$(uname -s)" in
    Linux*) echo "linux" ;;
    Darwin*) echo "mac" ;;
    *BSD*) echo "bsd" ;;
    MINGW*|MSYS*|CYGWIN*) echo "windows" ;;
    *) echo "unknown" ;;
  esac
}

__is_remote() {
  [ -n "${SSH_CLIENT:-}" ] || [ -n "${SSH_TTY:-}" ] || [ -n "${SSH_CONNECTION:-}" ]
}

__has_display() {
  [ -n "${DISPLAY:-}" ] || [ -n "${WAYLAND_DISPLAY:-}" ]
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Core helper functions
__cmd_exists() { command -v "$1" >/dev/null 2>&1; }

__is_running() {
  local proc="$1"
  case "$(__get_os)" in
    mac) pgrep -x "$proc" >/dev/null 2>&1 ;;
    windows) tasklist 2>/dev/null | grep -qi "$proc" ;;
    *) pgrep -x "$proc" >/dev/null 2>&1 || pgrep -f "$proc" >/dev/null 2>&1 ;;
  esac
}

__printf_color() {
  local color="${2:-0}"
  printf "\033[0;%sm%s\033[0m\n" "$color" "$1"
}
__printf_red() { __printf_color "$1" "31"; }
__printf_green() { __printf_color "$1" "32"; }
__printf_yellow() { __printf_color "$1" "33"; }
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Smart notifications
__notifications() {
  local title="$1" msg="$2"

  # Remote/no display - just print to stderr
  if __is_remote || ! __has_display; then
    printf "[%s] %s\n" "$title" "$msg" >&2
    return 0
  fi

  # GUI notifications based on OS
  case "$(__get_os)" in
    mac)
      osascript -e "display notification \"$msg\" with title \"$title\"" 2>/dev/null && return 0
      ;;
    linux|bsd)
      if __cmd_exists notify-send; then
        notify-send "$title" "$msg" 2>/dev/null && return 0
      fi
      ;;
    windows)
      if __cmd_exists powershell.exe; then
        powershell.exe -Command "Add-Type -AssemblyName System.Windows.Forms; [System.Windows.Forms.MessageBox]::Show('$msg', '$title')" 2>/dev/null && return 0
      fi
      ;;
  esac

  # Fallback
  printf "[%s] %s\n" "$title" "$msg" >&2
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Version and help
__version() { echo "$PROG $VERSION"; }

__help() {
  cat <<EOF
$PROG $VERSION - Recursively rename files

Usage: $PROG [options] <directory> <search> <replace> [type]

Options:
  -v, --version    Show version
  -h, --help       Show this help

Arguments:
  directory        Directory to search in (default: current directory)
  search           String to search for in filenames
  replace          String to replace with (can be empty)
  type             Type: file or dir (default: file)

Environment:
  SEARCH_DIR       Directory to search
  SEARCH           String to search for
  REPLACE          String to replace with
  TYPE             Type of items to rename (file, dir)

Examples:
  $PROG "/home/user/my-files" "apple" "orange"
  $PROG . "old" "new" dir
  SEARCH="foo" REPLACE="bar" $PROG ./src
EOF
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Rename function
__rename_items() {
  local SEARCH_PATH="$1"
  local SEARCH="$2"
  local REPLACE="$3"
  local FINDTYPE="$4"
  local exitCode=0
  local FILENAME NEW_FILENAME

  if [ "$FINDTYPE" = "d" ] || [ "$FINDTYPE" = "dir" ]; then
    __printf_green "Renaming all directories from '$SEARCH' to '$REPLACE'"
    find "$SEARCH_PATH" -type d -name "*$SEARCH*" -printf "%P\n" 2>/dev/null | while read -r FILENAME; do
      NEW_FILENAME="${FILENAME//$SEARCH/$REPLACE}"
      if [ -n "$FILENAME" ] && [ "$FILENAME" != "$NEW_FILENAME" ]; then
        if mv -f "$SEARCH_PATH/$FILENAME" "$SEARCH_PATH/$NEW_FILENAME" 2>/dev/null; then
          __printf_green "Renamed: $FILENAME -> $NEW_FILENAME"
        else
          __printf_red "Failed to rename: $FILENAME"
          exitCode=1
        fi
      fi
    done
  else
    __printf_green "Renaming all files from '$SEARCH' to '$REPLACE'"
    find "$SEARCH_PATH" -type f -name "*$SEARCH*" -printf "%P\n" 2>/dev/null | while read -r FILENAME; do
      NEW_FILENAME="${FILENAME//$SEARCH/$REPLACE}"
      if [ -n "$FILENAME" ] && [ "$FILENAME" != "$NEW_FILENAME" ]; then
        local DIR=$(dirname "$SEARCH_PATH/$NEW_FILENAME")
        [ -d "$DIR" ] || mkdir -p "$DIR"
        if mv -f "$SEARCH_PATH/$FILENAME" "$SEARCH_PATH/$NEW_FILENAME" 2>/dev/null; then
          __printf_green "Renamed: $FILENAME -> $NEW_FILENAME"
        else
          __printf_red "Failed to rename: $FILENAME"
          exitCode=1
        fi
      fi
    done
  fi

  return $exitCode
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Main function
main() {
  local exitCode=0

  # Parse options
  case "${1:-}" in
    -v|--version) __version; exit 0 ;;
    -h|--help) __help; exit 0 ;;
  esac

  # Get arguments
  local SEARCH_PATH="${1:-${SEARCH_DIR:-.}}"
  local SEARCH="${2:-$SEARCH}"
  local REPLACE="${3:-$REPLACE}"
  local FINDTYPE="${4:-${TYPE:-file}}"

  # Validate arguments
  if [ -z "$SEARCH_PATH" ] || [ -z "$SEARCH" ]; then
    __printf_red "Error: directory and search string are required"
    __help >&2
    exit 1
  fi

  if [ ! -d "$SEARCH_PATH" ]; then
    __printf_red "Error: Directory does not exist: $SEARCH_PATH"
    exit 1
  fi

  # Execute rename
  __rename_items "$SEARCH_PATH" "$SEARCH" "$REPLACE" "$FINDTYPE"
  exitCode=$?

  return "$exitCode"
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Execute
main "$@"
exit $?
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# end
