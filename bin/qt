#!/usr/bin/env bash
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version       : 202601061012-git
# @Author        : Jason Hempstead
# @Contact       : jason@casjaysdev.pro
# @License       : WTFPL
# @ReadME        : qt --help
# @Copyright     : Copyright: (c) 2021 Jason Hempstead, CasjaysDev
# @Created       : Thursday, Mar 11, 2021 16:02 EST
# @File          : qt
# @Description   : Search for text within a directory
# @Changelog     : Refactored for self-contained operation
# @TODO          :
# @Other         :
# @Resource      :
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Script variables
PROG="qt"
VERSION="202601061012-git"
USER="${SUDO_USER:-${USER}}"
HOME="${USER_HOME:-${HOME}}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Environment Detection
__get_os() {
  case "$(uname -s)" in
    Linux*) echo "linux" ;;
    Darwin*) echo "mac" ;;
    *BSD*) echo "bsd" ;;
    MINGW*|MSYS*|CYGWIN*) echo "windows" ;;
    *) echo "unknown" ;;
  esac
}

__is_remote() {
  [ -n "${SSH_CLIENT:-}" ] || [ -n "${SSH_TTY:-}" ] || [ -n "${SSH_CONNECTION:-}" ]
}

__has_display() {
  [ -n "${DISPLAY:-}" ] || [ -n "${WAYLAND_DISPLAY:-}" ]
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Core helper functions
__cmd_exists() { command -v "$1" >/dev/null 2>&1; }

__is_running() {
  local proc="$1"
  case "$(__get_os)" in
    mac) pgrep -x "$proc" >/dev/null 2>&1 ;;
    windows) tasklist 2>/dev/null | grep -qi "$proc" ;;
    *) pgrep -x "$proc" >/dev/null 2>&1 || pgrep -f "$proc" >/dev/null 2>&1 ;;
  esac
}

__printf_color() {
  local color="${2:-0}"
  printf "\033[0;%sm%s\033[0m\n" "$color" "$1"
}
__printf_red() { __printf_color "$1" "31"; }
__printf_green() { __printf_color "$1" "32"; }
__printf_yellow() { __printf_color "$1" "33"; }
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Smart notifications
__notifications() {
  local title="$1" msg="$2"

  # Remote/no display - just print to stderr
  if __is_remote || ! __has_display; then
    printf "[%s] %s\n" "$title" "$msg" >&2
    return 0
  fi

  # GUI notifications based on OS
  case "$(__get_os)" in
    mac)
      osascript -e "display notification \"$msg\" with title \"$title\"" 2>/dev/null && return 0
      ;;
    linux|bsd)
      if __cmd_exists notify-send; then
        notify-send "$title" "$msg" 2>/dev/null && return 0
      fi
      ;;
    windows)
      if __cmd_exists powershell.exe; then
        powershell.exe -Command "Add-Type -AssemblyName System.Windows.Forms; [System.Windows.Forms.MessageBox]::Show('$msg', '$title')" 2>/dev/null && return 0
      fi
      ;;
  esac

  # Fallback
  printf "[%s] %s\n" "$title" "$msg" >&2
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Version and help
__version() { echo "$PROG $VERSION"; }

__help() {
  cat <<EOF
$PROG $VERSION - Search for text within a directory

Usage: $PROG [options] [directory] <pattern>

Options:
  -v, --version    Show version
  -h, --help       Show this help

Arguments:
  directory        Directory to search in (default: current directory)
  pattern          Search pattern (required)

Description:
  Recursively searches for text patterns within files in a directory.
  Excludes .git and node_modules directories by default.
  Results are displayed with colored output in less.

Examples:
  $PROG function          Search for 'function' in current directory
  $PROG /path/to/dir foo  Search for 'foo' in specified directory
  $PROG "TODO:"           Search for TODO comments
EOF
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Main function
main() {
  # Parse options
  case "${1:-}" in
    -v|--version) __version; exit 0 ;;
    -h|--help) __help; exit 0 ;;
  esac

  local SEARCH_DIR=""

  # Determine search directory and pattern
  if [ -d "$1" ]; then
    SEARCH_DIR="$1"
    shift 1
  elif [ -d "$2" ]; then
    SEARCH_DIR="$2"
    # Pattern is $1, so we need to handle differently
    local pattern="$1"
    shift 2
    set -- "$pattern" "$@"
  else
    SEARCH_DIR="$PWD"
  fi

  # Check if pattern was provided
  if [ $# -eq 0 ]; then
    __printf_red "Error: You provided nothing to search for"
    __help >&2
    exit 1
  fi

  # Build grep options
  local GREP_OPTS="-ir --color=always $*"
  local GREP_EXCLUDE="--exclude-dir=$SEARCH_DIR/.git --exclude-dir=$SEARCH_DIR/node_modules"

  # Perform search
  local SEARCH
  SEARCH="$(grep $GREP_OPTS $GREP_EXCLUDE "${SEARCH_DIR:-.}" 2>/dev/null || echo '')"

  if [ -d "$SEARCH_DIR" ] && [ -n "$SEARCH" ]; then
    echo "$SEARCH" | awk -F':' '{print $1" : "$2}' | less -RX
  else
    __printf_red "Search returned no results"
    return 1
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Execute
main "$@"
exit $?
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# end
