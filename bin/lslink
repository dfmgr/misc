#!/usr/bin/env bash
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
PROG="lslink"
USER="${SUDO_USER:-${USER}}"
HOME="${USER_HOME:-${HOME}}"
SRC_DIR="${BASH_SOURCE%/*}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
#set opts

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version       : 202207042122-git
# @Author        : Jason Hempstead
# @Contact       : jason@casjaysdev.com
# @License       : WTFPL
# @ReadME        : lslink --help
# @Copyright     : Copyright: (c) 2021 Jason Hempstead, CasjaysDev
# @Created       : Wednesday, Dec 1, 2021 12:47 EST
# @File          : lslink
# @Description   : list symlinks
# @TODO          :
# @Other         :
# @Resource      :
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Main function
__version() { app_version; }
__help() {
  app_help 'Usage: lslink "dir"' \
    "-v, --version          -  display version" \
    "-h, --help             -  display help"
}
main() {
  if [ -f "$SRC_DIR/functions.bash" ]; then local DIR="$SRC_DIR"; else local DIR="$HOME/.local/bin"; fi
  if [[ -f "$DIR/functions.bash" ]]; then
    . "$DIR/functions.bash"
  else
    printf "\t\t\\033[0;31m%s \033[0m\n" "Couldn't source the functions file from $DIR"
    return 1
  fi
  __search() {
    if [[ -n "$filter" ]]; then
      ls -la "$search" 2>/dev/null | grep "$filter" | awk '{print $11}' | grep -v '^$' | grep '^'
    else
      ls -la "$search" 2>/dev/null | awk '{print $11}' | grep -v '^$' | grep '^'
    fi
  }
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  case "$1" in
  -v | --version) __version ;;
  -h | --help) __help ;;
  --raw) shift 1 && RAW="true" ;;
  -f | -s | --search)
    filter="$2"
    shift 2
    ;;
  esac
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  search="${*:-.}"
  files="$(__search)"
  if [[ -n "$files" ]]; then
    if [[ -n "$RAW" ]]; then
      printf "%s\n" "$files"
    else
      printf "%s\n" "$files" | printf_readline 5
    fi
  else
    printf_red "No symlinks exist in $1"
    exitCode=1
  fi
  return ${exitCode:-$?}
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# execute function
main "$@"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
exit $?
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# end
