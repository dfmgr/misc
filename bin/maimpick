#!/usr/bin/env bash
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version       : 202601061012-git
# @Author        : Jason Hempstead
# @Contact       : jason@casjaysdev.pro
# @License       : WTFPL
# @ReadME        : maimpick --help
# @Copyright     : Copyright: (c) 2021 Jason Hempstead, CasjaysDev
# @Created       : Thursday, Mar 11, 2021 10:36 EST
# @File          : maimpick
# @Description   : Screenshot utility using maim with dmenu selection
# @Changelog     : Refactored for self-contained operation
# @TODO          :
# @Other         :
# @Resource      :
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Script variables
PROG="maimpick"
VERSION="202601061012-git"
USER="${SUDO_USER:-${USER}}"
HOME="${USER_HOME:-${HOME}}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Environment Detection
__get_os() {
  case "$(uname -s)" in
    Linux*) echo "linux" ;;
    Darwin*) echo "mac" ;;
    *BSD*) echo "bsd" ;;
    MINGW*|MSYS*|CYGWIN*) echo "windows" ;;
    *) echo "unknown" ;;
  esac
}

__is_remote() {
  [ -n "${SSH_CLIENT:-}" ] || [ -n "${SSH_TTY:-}" ] || [ -n "${SSH_CONNECTION:-}" ]
}

__has_display() {
  [ -n "${DISPLAY:-}" ] || [ -n "${WAYLAND_DISPLAY:-}" ]
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Core helper functions
__cmd_exists() { command -v "$1" >/dev/null 2>&1; }

__is_running() {
  local proc="$1"
  case "$(__get_os)" in
    mac) pgrep -x "$proc" >/dev/null 2>&1 ;;
    windows) tasklist 2>/dev/null | grep -qi "$proc" ;;
    *) pgrep -x "$proc" >/dev/null 2>&1 || pgrep -f "$proc" >/dev/null 2>&1 ;;
  esac
}

__printf_color() {
  local color="${2:-0}"
  printf "\033[0;%sm%s\033[0m\n" "$color" "$1"
}
__printf_red() { __printf_color "$1" "31"; }
__printf_green() { __printf_color "$1" "32"; }
__printf_yellow() { __printf_color "$1" "33"; }
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Smart notifications
__notifications() {
  local title="$1" msg="$2"

  # Remote/no display - just print to stderr
  if __is_remote || ! __has_display; then
    printf "[%s] %s\n" "$title" "$msg" >&2
    return 0
  fi

  # GUI notifications based on OS
  case "$(__get_os)" in
    mac)
      osascript -e "display notification \"$msg\" with title \"$title\"" 2>/dev/null && return 0
      ;;
    linux|bsd)
      if __cmd_exists notify-send; then
        notify-send "$title" "$msg" 2>/dev/null && return 0
      fi
      ;;
    windows)
      if __cmd_exists powershell.exe; then
        powershell.exe -Command "Add-Type -AssemblyName System.Windows.Forms; [System.Windows.Forms.MessageBox]::Show('$msg', '$title')" 2>/dev/null && return 0
      fi
      ;;
  esac

  # Fallback
  printf "[%s] %s\n" "$title" "$msg" >&2
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Version and help
__version() { echo "$PROG $VERSION"; }

__help() {
  cat <<EOF
$PROG $VERSION - Screenshot utility using maim

Usage: $PROG [options]

Options:
  -v, --version    Show version
  -h, --help       Show this help

Description:
  Interactive screenshot tool that uses dmenu to select the capture mode.
  Screenshots can be saved to a file or copied to clipboard.

Available modes:
  - Selected area (save to file)
  - Current window (save to file)
  - Full screen (save to file)
  - Selected area (copy to clipboard)
  - Current window (copy to clipboard)
  - Full screen (copy to clipboard)

Requirements:
  - maim (screenshot tool)
  - dmenu (menu selector)
  - xdotool (for window capture)
  - xclip (for clipboard operations)

Environment:
  Screenshots are saved to: ~/Pictures/maim/

Examples:
  $PROG
EOF
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Main function
main() {
  local exitCode=0

  # Parse options
  case "${1:-}" in
    -v|--version) __version; exit 0 ;;
    -h|--help) __help; exit 0 ;;
  esac

  # Check for required command
  if ! __cmd_exists maim; then
    __printf_red "Error: maim is required but not found"
    exit 1
  fi

  # Check for display
  if ! __has_display; then
    __printf_red "Error: No display available"
    exit 1
  fi

  # Check if running remotely
  if __is_remote; then
    __printf_red "Error: Cannot run screenshot tool over SSH"
    exit 1
  fi

  # Set up image directory
  local IMAGE_DIR="$HOME/Pictures/maim"
  local IMG="$IMAGE_DIR/$(date '+%y%m%d-%H%M-%S').png"
  mkdir -p "$IMAGE_DIR" &>/dev/null

  # Get selection from dmenu
  local choice
  choice="$(printf "a selected area\ncurrent window\nfull screen\na selected area (copy)\ncurrent window (copy)\nfull screen (copy)" | dmenu -l 6 -i -p "Screenshot which area?")"

  # Handle selection
  case "$choice" in
    "a selected area")
      maim -s "$IMAGE_DIR/pic-selected-$(date '+%y%m%d-%H%M-%S').png"
      exitCode=$?
      [ $exitCode -eq 0 ] && __notifications "Screenshot" "Selected area saved"
      ;;
    "current window")
      maim -i "$(xdotool getactivewindow)" "$IMAGE_DIR/pic-window-$(date '+%y%m%d-%H%M-%S').png"
      exitCode=$?
      [ $exitCode -eq 0 ] && __notifications "Screenshot" "Window saved"
      ;;
    "full screen")
      maim "$IMAGE_DIR/pic-full-$(date '+%y%m%d-%H%M-%S').png"
      exitCode=$?
      [ $exitCode -eq 0 ] && __notifications "Screenshot" "Full screen saved"
      ;;
    "a selected area (copy)")
      maim -s | xclip -selection clipboard -t image/png
      exitCode=$?
      [ $exitCode -eq 0 ] && __notifications "Screenshot" "Selected area copied to clipboard"
      ;;
    "current window (copy)")
      maim -i "$(xdotool getactivewindow)" | xclip -selection clipboard -t image/png
      exitCode=$?
      [ $exitCode -eq 0 ] && __notifications "Screenshot" "Window copied to clipboard"
      ;;
    "full screen (copy)")
      maim | xclip -selection clipboard -t image/png
      exitCode=$?
      [ $exitCode -eq 0 ] && __notifications "Screenshot" "Full screen copied to clipboard"
      ;;
    *)
      # User cancelled or empty selection
      exitCode=0
      ;;
  esac

  return "$exitCode"
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Execute
main "$@"
exit $?
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# end
