#!/usr/bin/env bash
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version       : 202601061012-git
# @Author        : Jason Hempstead
# @Contact       : jason@casjaysdev.pro
# @License       : WTFPL
# @ReadME        : putclip --help
# @Copyright     : Copyright: (c) 2021 Jason Hempstead, CasjaysDev
# @Created       : Thursday, Mar 11, 2021 15:07 EST
# @File          : putclip
# @Description   : Copy input to clipboard
# @Changelog     : Refactored for self-contained operation
# @TODO          :
# @Other         :
# @Resource      :
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Script variables
PROG="putclip"
VERSION="202601061012-git"
USER="${SUDO_USER:-${USER}}"
HOME="${USER_HOME:-${HOME}}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Environment Detection
__get_os() {
  case "$(uname -s)" in
    Linux*) echo "linux" ;;
    Darwin*) echo "mac" ;;
    *BSD*) echo "bsd" ;;
    MINGW*|MSYS*|CYGWIN*) echo "windows" ;;
    *) echo "unknown" ;;
  esac
}

__is_remote() {
  [ -n "${SSH_CLIENT:-}" ] || [ -n "${SSH_TTY:-}" ] || [ -n "${SSH_CONNECTION:-}" ]
}

__has_display() {
  [ -n "${DISPLAY:-}" ] || [ -n "${WAYLAND_DISPLAY:-}" ]
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Core helper functions
__cmd_exists() { command -v "$1" >/dev/null 2>&1; }

__is_running() {
  local proc="$1"
  case "$(__get_os)" in
    mac) pgrep -x "$proc" >/dev/null 2>&1 ;;
    windows) tasklist 2>/dev/null | grep -qi "$proc" ;;
    *) pgrep -x "$proc" >/dev/null 2>&1 || pgrep -f "$proc" >/dev/null 2>&1 ;;
  esac
}

__printf_color() {
  local color="${2:-0}"
  printf "\033[0;%sm%s\033[0m\n" "$color" "$1"
}
__printf_red() { __printf_color "$1" "31"; }
__printf_green() { __printf_color "$1" "32"; }
__printf_yellow() { __printf_color "$1" "33"; }
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Smart notifications
__notifications() {
  local title="$1" msg="$2"

  # Remote/no display - just print to stderr
  if __is_remote || ! __has_display; then
    printf "[%s] %s\n" "$title" "$msg" >&2
    return 0
  fi

  # GUI notifications based on OS
  case "$(__get_os)" in
    mac)
      osascript -e "display notification \"$msg\" with title \"$title\"" 2>/dev/null && return 0
      ;;
    linux|bsd)
      if __cmd_exists notify-send; then
        notify-send "$title" "$msg" 2>/dev/null && return 0
      fi
      ;;
    windows)
      if __cmd_exists powershell.exe; then
        powershell.exe -Command "Add-Type -AssemblyName System.Windows.Forms; [System.Windows.Forms.MessageBox]::Show('$msg', '$title')" 2>/dev/null && return 0
      fi
      ;;
  esac

  # Fallback
  printf "[%s] %s\n" "$title" "$msg" >&2
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Version and help
__version() { echo "$PROG $VERSION"; }

__help() {
  cat <<EOF
$PROG $VERSION - Copy input to clipboard

Usage: $PROG [options] [text]
       command | $PROG

Options:
  -v, --version    Show version
  -h, --help       Show this help

Arguments:
  text             Text to copy to clipboard (can also be piped)

Description:
  Copies text to the system clipboard.
  Works on macOS (pbcopy), Linux (xclip), and falls back
  to a temp file on other systems.

Examples:
  $PROG "Hello World"     Copy text to clipboard
  echo "test" | $PROG     Copy piped input to clipboard
  uptime | $PROG          Copy command output to clipboard
EOF
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Main function
main() {
  local exitCode=0
  local message=""

  # Parse options
  case "${1:-}" in
    -v|--version) __version; exit 0 ;;
    -h|--help) __help; exit 0 ;;
  esac

  # Get input from stdin or arguments
  if [ $# -eq 0 ] && [ ! -t 0 ]; then
    message="$(</dev/stdin)"
  else
    message="$*"
  fi

  # OS-specific clipboard copy
  case "$(__get_os)" in
    mac)
      if __cmd_exists pbcopy; then
        echo "$message" | LC_CTYPE=UTF-8 tr -d "\n" | pbcopy && exitCode=0 || exitCode=1
      else
        __printf_red "Error: pbcopy not found"
        exitCode=1
      fi
      ;;
    linux|bsd)
      if __cmd_exists xclip; then
        echo "$message" | xclip -selection clipboard && exitCode=0 || exitCode=1
      elif __cmd_exists xsel; then
        echo "$message" | xsel --clipboard --input && exitCode=0 || exitCode=1
      elif __cmd_exists wl-copy && [ -n "${WAYLAND_DISPLAY:-}" ]; then
        echo "$message" | wl-copy && exitCode=0 || exitCode=1
      else
        __printf_red "Error: No clipboard tool found (xclip, xsel, or wl-copy)"
        exitCode=1
      fi
      ;;
    windows)
      if __cmd_exists clip.exe; then
        echo "$message" | clip.exe && exitCode=0 || exitCode=1
      elif __cmd_exists powershell.exe; then
        echo "$message" | powershell.exe -Command "Set-Clipboard -Value \$input" && exitCode=0 || exitCode=1
      else
        __printf_red "Error: No clipboard tool found"
        exitCode=1
      fi
      ;;
    *)
      # Fallback to temp file
      echo "$message" >> "${TMPDIR:-/tmp}/clipboard" && exitCode=0 || exitCode=1
      ;;
  esac

  return "$exitCode"
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Execute
main "$@"
exit $?
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# end
