#!/usr/bin/env bash
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version       : 202201210409-git
# @Author        : Jason Hempstead
# @Contact       : jason@casjaysdev.com
# @License       : LICENSE.md
# @ReadME        : setup_vmtools --help
# @Copyright     : Copyright: (c) 2022 Jason Hempstead, Casjays Developments
# @Created       : Saturday, Jun 25, 2022 13:42 EDT
# @File          : setup_vmtools
# @Description   : 
# @TODO          : 
# @Other         : 
# @Resource      : 
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
setup_vmtools_main() {
  PROG="$(basename "$0" 2>/dev/null)"
  VERSION="202201210409-git"
  RUN_USER="${SUDO_USER:-${USER}}"
  USER="${SUDO_USER:-${USER}}"
  HOME="${USER_HOME:-${HOME}}"
  SRC_DIR="${BASH_SOURCE%/*}"
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Set bash options
  if [[ "$1" == "--debug" ]]; then shift 1 && set -xo pipefail && export SCRIPT_OPTS="--debug" && export _DEBUG="on"; fi

  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Main function file
  if [ -f "$SRC_DIR/functions.bash" ]; then
    local FUNCTIONS_DIR="$SRC_DIR"
    . "$FUNCTIONS_DIR/functions.bash"
  elif [ -f "$HOME/.local/bin/functions.bash" ]; then
    local FUNCTIONS_DIR="$HOME/.local/bin"
    . "$FUNCTIONS_DIR/functions.bash"
  else
    printf "\t\t\033[0;31m%s \033[0m\n" "Couldn't source the functions file from ${FUNCTIONS_DIR:-$SRC_DIR}"
    return 1
  fi
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # helper functions - See github.com/dfmgr/misc/bin/functions.bash
  __version() { app_version; }
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  __help() {
    app_help "4" "Usage: setup_vmtools  " \
      "--options                              -  Show all options" \
      "-c, --config                           -  Create config file" \
      "-v, --version                          -  Display version" \
      "-h, --help                             -  Display help"

    exit $?
  }
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  __list_options() {
    printf_custom "$1" "$2: $(echo ${3:-$ARRAY} | __sed 's|:||g;s|'$4'| '$5'|g')" 2>/dev/null
  }
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  __gen_config() {
    printf_green "Generating the config file in"
    printf_green "$SETUP_VMTOOLS_CONFIG_DIR/$SETUP_VMTOOLS_CONFIG_FILE"
    [ -d "$SETUP_VMTOOLS_CONFIG_DIR" ] || mkdir -p "$SETUP_VMTOOLS_CONFIG_DIR"
    [ -d "$SETUP_VMTOOLS_CONFIG_BACKUP_DIR" ] || mkdir -p "$SETUP_VMTOOLS_CONFIG_BACKUP_DIR"
    [ -f "$SETUP_VMTOOLS_CONFIG_DIR/$SETUP_VMTOOLS_CONFIG_FILE" ] &&
      cp -Rf "$SETUP_VMTOOLS_CONFIG_DIR/$SETUP_VMTOOLS_CONFIG_FILE" "$SETUP_VMTOOLS_CONFIG_BACKUP_DIR/$SETUP_VMTOOLS_CONFIG_FILE.$$"
    cat <<EOF >"$SETUP_VMTOOLS_CONFIG_DIR/$SETUP_VMTOOLS_CONFIG_FILE"
# Settings for setup_vmtools

# Notification settings
SETUP_VMTOOLS_GOOD_MESSAGE="${SETUP_VMTOOLS_GOOD_MESSAGE:-Everything Went OK}"
SETUP_VMTOOLS_ERROR_MESSAGE="${SETUP_VMTOOLS_ERROR_MESSAGE:-Well something seems to have gone wrong}"
SETUP_VMTOOLS_NOTIFY_ENABLED="${SETUP_VMTOOLS_NOTIFY_ENABLED:-yes}"
SETUP_VMTOOLS_NOTIFY_CLIENT_NAME="${NOTIFY_CLIENT_NAME:-$PROG}"
SETUP_VMTOOLS_NOTIFY_CLIENT_ICON="${NOTIFY_CLIENT_ICON:-$SETUP_VMTOOLS_NOTIFY_CLIENT_ICON}"

# Colorization settings
SETUP_VMTOOLS_OUTPUT_COLOR="${SETUP_VMTOOLS_OUTPUT_COLOR:-5}"
SETUP_VMTOOLS_OUTPUT_COLOR_GOOD="${SETUP_VMTOOLS_OUTPUT_COLOR_GOOD:-2}"
SETUP_VMTOOLS_OUTPUT_COLOR_ERROR="${SETUP_VMTOOLS_OUTPUT_COLOR_ERROR:-1}"

EOF
    if [ -f "$SETUP_VMTOOLS_CONFIG_DIR/$SETUP_VMTOOLS_CONFIG_FILE" ]; then
      [[ "$INIT_CONFIG" = "TRUE" ]] || printf_green "Your config file for $APPNAME has been created"
      true
    else
      printf_red "Failed to create the config file"
      false
    fi
  }
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Additional functions

  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Defaults
  local exitCode=
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Application Folders
  local SETUP_VMTOOLS_LOG_DIR="${SETUP_VMTOOLS_LOG_DIR:-$HOME/.local/log/setup_vmtools}"
  local SETUP_VMTOOLS_CACHE_DIR="${SETUP_VMTOOLS_CACHE_DIR:-$HOME/.cache/setup_vmtools}"
  local SETUP_VMTOOLS_CONFIG_DIR="${SETUP_VMTOOLS_CONFIG_DIR:-$HOME/.config/misc/settings/setup_vmtools}"
  local SETUP_VMTOOLS_OPTIONS_DIR="${SETUP_VMTOOLS_OPTIONS_DIR:-$HOME/.local/share/misc/setup_vmtools/options}"
  local SETUP_VMTOOLS_CONFIG_BACKUP_DIR="${SETUP_VMTOOLS_CONFIG_BACKUP_DIR:-$HOME/.local/share/misc/setup_vmtools/backups}"
  local SETUP_VMTOOLS_TEMP_DIR="${SETUP_VMTOOLS_TEMP_DIR:-$HOME/.local/tmp/system_scripts/setup_vmtools}"
  local SETUP_VMTOOLS_CONFIG_FILE="${SETUP_VMTOOLS_CONFIG_FILE:-settings.conf}"
  local SETUP_VMTOOLS_GOOD_MESSAGE="${SETUP_VMTOOLS_GOOD_MESSAGE:-Everything Went OK}"
  local SETUP_VMTOOLS_ERROR_MESSAGE="${SETUP_VMTOOLS_ERROR_MESSAGE:-Well something seems to have gone wrong}"
  local SETUP_VMTOOLS_NOTIFY_ENABLED="${SETUP_VMTOOLS_NOTIFY_ENABLED:-yes}"
  local SETUP_VMTOOLS_NOTIFY_CLIENT_NAME="${NOTIFY_CLIENT_NAME:-$APPNAME}"
  local SETUP_VMTOOLS_NOTIFY_CLIENT_ICON="${NOTIFY_CLIENT_ICON:-$SETUP_VMTOOLS_NOTIFY_CLIENT_ICON}"
  local SETUP_VMTOOLS_OUTPUT_COLOR="${SETUP_VMTOOLS_OUTPUT_COLOR:-5}"
  local SETUP_VMTOOLS_OUTPUT_COLOR_GOOD="${SETUP_VMTOOLS_OUTPUT_COLOR_GOOD:-2}"
  local SETUP_VMTOOLS_OUTPUT_COLOR_ERROR="${SETUP_VMTOOLS_OUTPUT_COLOR_ERROR:-1}"
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Enviroment overrides

  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Generate config files
  [ -f "$SETUP_VMTOOLS_CONFIG_DIR/$SETUP_VMTOOLS_CONFIG_FILE" ] || [[ "$*" = *config ]] || INIT_CONFIG="${INIT_CONFIG:-TRUE}" __gen_config ${SETARGS:-$@}
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Import config
  [ -f "$SETUP_VMTOOLS_CONFIG_DIR/$SETUP_VMTOOLS_CONFIG_FILE" ] && . "$SETUP_VMTOOLS_CONFIG_DIR/$SETUP_VMTOOLS_CONFIG_FILE"
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Ensure Directories exist
  [ -d "$SETUP_VMTOOLS_LOG_DIR" ] || mkdir -p "$SETUP_VMTOOLS_LOG_DIR" &>/dev/null
  [ -d "$SETUP_VMTOOLS_TEMP_DIR" ] || mkdir -p "$SETUP_VMTOOLS_TEMP_DIR" &>/dev/null
  [ -d "$SETUP_VMTOOLS_CACHE_DIR" ] || mkdir -p "$SETUP_VMTOOLS_CACHE_DIR" &>/dev/null
  local SETUP_VMTOOLS_TEMP_FILE="${SETUP_VMTOOLS_TEMP_FILE:-$(mktemp $SETUP_VMTOOLS_TEMP_DIR/XXXXXX 2>/dev/null)}"
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Setup trap to remove temp file
  trap 'exitCode=${exitCode:-$?};[ -n "$SETUP_VMTOOLS_TEMP_FILE" ] && [ -f "$SETUP_VMTOOLS_TEMP_FILE" ] && rm -Rf "$SETUP_VMTOOLS_TEMP_FILE" &>/dev/null' EXIT
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Setup notification function
  if [ "$SETUP_VMTOOLS_NOTIFY_ENABLED" = "yes" ]; then
    __notifications() {
      export NOTIFY_GOOD_MESSAGE="${SETUP_VMTOOLS_GOOD_MESSAGE}"
      export NOTIFY_ERROR_MESSAGE="${SETUP_VMTOOLS_ERROR_MESSAGE}"
      export NOTIFY_CLIENT_NAME="${SETUP_VMTOOLS_NOTIFY_CLIENT_NAME}"
      export NOTIFY_CLIENT_ICON="${SETUP_VMTOOLS_NOTIFY_CLIENT_ICON}"
      notifications "$@" && exitCode=0 || exitCode=1
      unset NOTIFY_CLIENT_NAME NOTIFY_CLIENT_ICON NOTIFY_GOOD_MESSAGE NOTIFY_ERROR_MESSAGE
      return ${exitCode:-$?}
    }
  else
    __notifications() { false; }
  fi
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Show warn message if variables are missing

  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Argument/Option settings
  local SETARGS="$*"
  local SHORTOPTS=""
  local LONGOPTS="options,config,version,help,dir:"
  local ARRAY=""
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Setup application options
  local setopts=$(getopt -o "$SHORTOPTS" --long "$LONGOPTS" -a -n "$(basename "$0" 2>/dev/null)" -- "$@" 2>/dev/null)
  eval set -- "${setopts[@]}" 2>/dev/null
  while :; do
    case "$1" in
    --options)
      shift 1
      [ -n "$1" ] || printf_blue "Current options for ${PROG:-$APPNAME}"
      [ -z "$SHORTOPTS" ] || __list_options "5" "Short Options" "-$SHORTOPTS" ',' '-'
      [ -z "$LONGOPTS" ] || __list_options "5" "Long Options" "--$LONGOPTS" ',' '--'
      [ -z "$ARRAY" ] || __list_options "5" "Base Options" "$ARRAY" ',' ''
      exit $?
      ;;
    --version)
      shift 1
      __version
      exit $?
      ;;
    --help)
      shift 1
      __help
      exit $?
      ;;
    --config)
      shift 1
      __gen_config
      exit $?
      ;;
    --dir)
      SETUP_VMTOOLS_CWD="$2"
      shift 2
      ;;
    --)
      shift 1
      break
      ;;
    esac
  done
  #set -- "$SETARGS"
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Actions based on env

  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Check for required applications/Network check
  cmd_exists --error bash || exit 1 # exit 1 if not found
  #am_i_online --error || exit 1     # exit 1 if no internet
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # APP Variables overrides

  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # begin main app
  printf_green "Version:$VERSION DIR=$SETUP_VMTOOLS_CONFIG_DIR"

  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # lets exit with code
  return ${exitCode:-$?}
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# execute function
setup_vmtools_main "$@"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# End application
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# lets exit with code
exit ${exitCode:-$?}
