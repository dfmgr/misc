#!/usr/bin/env bash
# shellcheck shell=bash
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version           :  202208301603-git
# @@Author           :  Jason Hempstead
# @@Contact          :  jason@casjaysdev.com
# @@License          :  WTFPL
# @@ReadME           :  gen-dockermgr --help
# @@Copyright        :  Copyright: (c) 2022 Jason Hempstead, Casjays Developments
# @@Created          :  Tuesday, Aug 30, 2022 16:03 EDT
# @@File             :  gen-dockermgr
# @@Description      :
# @@Changelog        :  New script
# @@TODO             :  Better documentation
# @@Other            :
# @@Resource         :
# @@Terminal App     :  no
# @@sudo/root        :  no
# @@Template         :  bash/user
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
APPNAME="$(basename "$0" 2>/dev/null)"
VERSION="202208301603-git"
HOME="${USER_HOME:-$HOME}"
USER="${SUDO_USER:-$USER}"
RUN_USER="${SUDO_USER:-$USER}"
SCRIPT_SRC_DIR="${BASH_SOURCE%/*}"
GEN_DOCKERMGR_REQUIRE_SUDO="${GEN_DOCKERMGR_REQUIRE_SUDO:-no}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Reopen in a terminal
#if [ ! -t 0 ] && { [ "$1" = --term ] || [ $# = 0 ]; }; then { [ "$1" = --term ] && shift 1 || true; } && TERMINAL_APP="TRUE" myterminal -e "$APPNAME $*" && exit || exit 1; fi
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Initial debugging
[ "$1" = "--debug" ] && set -x && export SCRIPT_OPTS="--debug" && export _DEBUG="on"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Disables colorization
[ "$1" = "--raw" ] && export SHOW_RAW="true"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# pipes fail
set -o pipefail
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Main function file
if [ -f "$SCRIPT_SRC_DIR/functions.bash" ]; then
  FUNCTIONS_DIR="$SCRIPT_SRC_DIR"
  . "$FUNCTIONS_DIR/functions.bash"
elif [ -f "$HOME/.local/bin/functions.bash" ]; then
  FUNCTIONS_DIR="$HOME/.local/bin"
  . "$FUNCTIONS_DIR/functions.bash"
else
  printf "\t\t\033[0;31m%s \033[0m\n" "Couldn't source the functions file from ${FUNCTIONS_DIR:-$SCRIPT_SRC_DIR}"
  exit 1
fi
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Send all output to /dev/null
__devnull() {
  tee &>/dev/null && exitCode=0 || exitCode=1
  return ${exitCode:-$?}
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -'
# Send errors to /dev/null
__devnull2() {
  [ -n "$1" ] && local cmd="$1" && shift 1 || return 1
  eval $cmd "$*" 2>/dev/null && exitCode=0 || exitCode=1
  return ${exitCode:-$?}
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -'
# See if the executable exists
__cmd_exists() {
  exitCode=0
  [ -n "$1" ] && local exitCode="" || return 0
  for cmd in "$@"; do
    builtin command -v "$cmd" &>/dev/null && exitCode+=$(($exitCode + 0)) || exitCode+=$(($exitCode + 1))
  done
  [ $exitCode -eq 0 ] || exitCode=3
  return ${exitCode:-$?}
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Check for a valid internet connection
__am_i_online() {
  local exitCode=0
  curl -q -LSsfI --max-time 1 --retry 0 "${1:-http://1.1.1.1}" 2>&1 | grep -qi 'server:.*cloudflare' || exitCode=4
  return ${exitCode:-$?}
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# colorization
if [ "$SHOW_RAW" = "true" ]; then
  printf_color() { printf '%b' "$1" | tr -d '\t' | sed '/^%b$/d;s,\x1B\[ 0-9;]*[a-zA-Z],,g'; }
else
  printf_color() { printf "%b" "$(tput setaf "${2:-7}" 2>/dev/null)" "$1" "$(tput sgr0 2>/dev/null)"; }
fi
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Additional printf_ colors
__printf_head() { printf_blue "$1"; }
__printf_opts() { printf_purple "$1"; }
__printf_line() { printf_cyan "$1"; }
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# output version
__version() { printf_cyan "$VERSION"; }
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# list options
__list_options() {
  printf_color "$1: " "$5"
  echo -ne "$2" | sed 's|:||g;s/'$3'/ '$4'/g'
  printf_newline
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# create the config file
__gen_config() {
  local NOTIFY_CLIENT_NAME="$APPNAME"
  if [ "$INIT_CONFIG" != "TRUE" ]; then
    printf_blue "Generating the config file in"
    printf_cyan "$GEN_DOCKERMGR_CONFIG_DIR/$GEN_DOCKERMGR_CONFIG_FILE"
  fi
  [ -d "$GEN_DOCKERMGR_CONFIG_DIR" ] || mkdir -p "$GEN_DOCKERMGR_CONFIG_DIR"
  [ -d "$GEN_DOCKERMGR_CONFIG_BACKUP_DIR" ] || mkdir -p "$GEN_DOCKERMGR_CONFIG_BACKUP_DIR"
  [ -f "$GEN_DOCKERMGR_CONFIG_DIR/$GEN_DOCKERMGR_CONFIG_FILE" ] &&
    cp -Rf "$GEN_DOCKERMGR_CONFIG_DIR/$GEN_DOCKERMGR_CONFIG_FILE" "$GEN_DOCKERMGR_CONFIG_BACKUP_DIR/$GEN_DOCKERMGR_CONFIG_FILE.$$"
  cat <<EOF >"$GEN_DOCKERMGR_CONFIG_DIR/$GEN_DOCKERMGR_CONFIG_FILE"
# Settings for gen-dockermgr

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Color Settings
GEN_DOCKERMGR_OUTPUT_COLOR_1="${GEN_DOCKERMGR_OUTPUT_COLOR_1:-}"
GEN_DOCKERMGR_OUTPUT_COLOR_2="${GEN_DOCKERMGR_OUTPUT_COLOR_2:-}"
GEN_DOCKERMGR_OUTPUT_COLOR_GOOD="${GEN_DOCKERMGR_OUTPUT_COLOR_GOOD:-}"
GEN_DOCKERMGR_OUTPUT_COLOR_ERROR="${GEN_DOCKERMGR_OUTPUT_COLOR_ERROR:-}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Notification Settings
GEN_DOCKERMGR_NOTIFY_ENABLED="${GEN_DOCKERMGR_NOTIFY_ENABLED:-}"
GEN_DOCKERMGR_GOOD_NAME="${GEN_DOCKERMGR_GOOD_NAME:-}"
GEN_DOCKERMGR_ERROR_NAME="${GEN_DOCKERMGR_ERROR_NAME:-}"
GEN_DOCKERMGR_GOOD_MESSAGE="${GEN_DOCKERMGR_GOOD_MESSAGE:-}"
GEN_DOCKERMGR_ERROR_MESSAGE="${GEN_DOCKERMGR_ERROR_MESSAGE:-}"
GEN_DOCKERMGR_NOTIFY_CLIENT_NAME="${GEN_DOCKERMGR_NOTIFY_CLIENT_NAME:-}"
GEN_DOCKERMGR_NOTIFY_CLIENT_ICON="${GEN_DOCKERMGR_NOTIFY_CLIENT_ICON:-}"
GEN_DOCKERMGR_NOTIFY_CLIENT_URGENCY="${GEN_DOCKERMGR_NOTIFY_CLIENT_URGENCY:-}"

EOF
  if builtin type -t __gen_config_local | grep -q 'function'; then __gen_config_local; fi
  if [ -f "$GEN_DOCKERMGR_CONFIG_DIR/$GEN_DOCKERMGR_CONFIG_FILE" ]; then
    [ "$INIT_CONFIG" = "TRUE" ] || printf_green "Your config file for $APPNAME has been created"
    . "$GEN_DOCKERMGR_CONFIG_DIR/$GEN_DOCKERMGR_CONFIG_FILE"
    exitCode=0
  else
    printf_red "Failed to create the config file"
    exitCode=1
  fi
  return ${exitCode:-$?}
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Help function - Align to 50
__help() {
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_opts "gen-dockermgr:  - $VERSION"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_line "Usage: gen-dockermgr [options] [commands]"
  __printf_line " - "
  __printf_line " - "
  __printf_line "--dir                           - Sets the working directory"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_opts "Other Options"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_line "--help                          - Shows this message"
  __printf_line "--config                        - Generate user config file"
  __printf_line "--version                       - Show script version"
  __printf_line "--options                       - Shows all available options"
  __printf_line "--debug                         - Enables script debugging"
  __printf_line "--raw                           - Removes all formatting on output"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Is current user root
__user_is_root() {
  { [ $(id -u) -eq 0 ] || [ $EUID -eq 0 ] || [ "$WHOAMI" = "root" ]; } && return 0 || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Is current user not root
__user_is_not_root() {
  { [ $(id -u) -ne 0 ] || [ $EUID -ne 0 ] || [ "$WHOAMI" != "root" ]; } && return 0 || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# # Get sudo password
__sudoask() { ask_for_password sudo true && return 0 || return 1; }
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Check if user is a member of sudo
__sudo_group() {
  grep -s "${1:-$USER}" "/etc/group" | grep -Eq 'wheel|adm|sudo' || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Run sudo
__sudorun() {
  __sudoif && __cmd_exists sudo && sudo -HE "$@" || { __sudoif && eval "$@"; }
  return $?
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Test if user has access to sudo
__can_i_sudo() {
  (sudo -vn && sudo -ln) 2>&1 | grep -vq 'may not' >/dev/null && return 0
  __sudo_group "${1:-$USER}" || __sudoif || __sudo true &>/dev/null || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# User can run sudo
__sudoif() {
  __user_is_root && return 0
  __can_i_sudo "${RUN_USER:-$USER}" && return 0
  __user_is_not_root && __sudoask && return 0 || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Run command as root
requiresudo() {
  if [ "$GEN_DOCKERMGR_REQUIRE_SUDO" = "yes" ] && [ -z "$GEN_DOCKERMGR_REQUIRE_SUDO_RUN" ]; then
    export GEN_DOCKERMGR_REQUIRE_SUDO="no"
    export GEN_DOCKERMGR_REQUIRE_SUDO_RUN="true"
    __sudo "$@"
    exit $?
  else
    return 0
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Execute sudo
__sudo() {
  CMD="${1:-echo}" && shift 1
  CMD_ARGS="${*:--e "${RUN_USER:-$USER}"}"
  SUDO="$(builtin command -v sudo 2>/dev/null || echo 'eval')"
  [ "$(basename "$SUDO" 2>/dev/null)" = "sudo" ] && OPTS="--preserve-env=PATH -HE"
  if __sudoif; then
    export PATH="$PATH"
    $SUDO ${OPTS:-} $CMD $CMD_ARGS && true || false
    exitCode=$?
  else
    printf '%s\n' "This requires root to run"
    exitCode=1
  fi
  return ${exitCode:-1}
}
# End of sudo functions
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
__trap_exit() {
  exitCode=${exitCode:-$?}
  [ -f "$GEN_DOCKERMGR_TEMP_FILE" ] && rm -Rf "$GEN_DOCKERMGR_TEMP_FILE" &>/dev/null
  if builtin type -t __trap_exit_local | grep -q 'function'; then __trap_exit_local; fi
  return $exitCode
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# User defined functions
__proxy_config() {
  cat <<EOF | tee
# Reverse Proxy for REPLACE_APPNAME

server {
  listen REPLACE_NGINX_HTTPS ssl http2;
  listen [::]:REPLACE_NGINX_HTTPS ssl http2;
  ssl_protocols TLSv1.2 TLSv1.3;
  ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:D$
  ssl_prefer_server_ciphers off;
  server_name REPLACE_SERVER_HOST *.REPLACE_SERVER_HOST;
  access_log /var/log/nginx/access.log;
  error_log  /var/log/nginx/error.log info;
  keepalive_timeout 75 75;
  ssl_certificate /etc/letsencrypt/live/domain/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/domain/privkey.pem;
  add_header Strict-Transport-Security "max-age=7200";

  location / {
    proxy_redirect          http:// https://;
    proxy_pass              http://REPLACE_SERVER_LISTEN:REPLACE_SERVER_PORT;
    send_timeout            3600;
    client_max_body_size    1024M;
    proxy_connect_timeout   3600;
    proxy_send_timeout      3600;
    proxy_read_timeout      3600;
    proxy_http_version      1.1;
    proxy_request_buffering off;
    proxy_buffering         off;
    proxy_set_header        Host \$host;
    proxy_set_header        X-Real-IP \$remote_addr;
    proxy_set_header        X-Forwarded-For \$proxy_add_x_forwarded_for;
    proxy_set_header        X-Forwarded-Proto \$scheme;
    proxy_set_header        Upgrade \$http_upgrade;
    proxy_set_header        Connection \$connection_upgrade;
    }

    include /etc/nginx/global.d/nginx-defaults.conf;
    include /etc/nginx/global.d/apache-defaults.conf;
    include /etc/nginx/global.d/cgi-bin.conf;
    include /etc/nginx/global.d/munin.conf;
    include /etc/nginx/global.d/vnstats.conf;
    include /etc/nginx/global.d/others.conf;
}
EOF
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
__initialize_app() {
  [ -d "$GEN_DOCKERMGR_DIR/nginx" ] || mkdir -p "$GEN_DOCKERMGR_DIR/nginx"
  [ -d "$GEN_DOCKERMGR_DIR/dataDir/bin" ] || mkdir -p "$GEN_DOCKERMGR_DIR/dataDir/bin"
  [ -d "$GEN_DOCKERMGR_DIR/dataDir/data" ] || mkdir -p "$GEN_DOCKERMGR_DIR/dataDir/data"
  [ -d "$GEN_DOCKERMGR_DIR/dataDir/config" ] || mkdir -p "$GEN_DOCKERMGR_DIR/dataDir/config"
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
__execute_gen_dockermgr() {
  __proxy_config | sed 's|REPLACE_APPNAME|'$REPLACE_APPNAME'|g' >"$GEN_DOCKERMGR_DIR/nginx/template"
  gen-readme "$GEN_DOCKERMGR_DIR" projects docker.md
  gen-license "$GEN_DOCKERMGR_DIR" wtfpl
  gitignore "$GEN_DOCKERMGR_DIR" default
  gen-script installers dockermgr.sh "$GEN_DOCKERMGR_DIR/install.sh" "$@"
  if [ -f "$GEN_DOCKERMGR_DIR/install.sh" ]; then
    gitadmin "$GEN_DOCKERMGR_DIR" setup "https://github.com/dockermgr/$REPLACE_APPNAME"
    exitCode=$?
  else
    exitCode=1
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# User defined variables/import external variables

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Application Folders
GEN_DOCKERMGR_CONFIG_FILE="${GEN_DOCKERMGR_CONFIG_FILE:-settings.conf}"
GEN_DOCKERMGR_CONFIG_DIR="${GEN_DOCKERMGR_CONFIG_DIR:-$HOME/.config/misc/settings/gen-dockermgr}"
GEN_DOCKERMGR_CONFIG_BACKUP_DIR="${GEN_DOCKERMGR_CONFIG_BACKUP_DIR:-$HOME/.local/share/misc/settings/gen-dockermgr/backups}"
GEN_DOCKERMGR_LOG_DIR="${GEN_DOCKERMGR_LOG_DIR:-$HOME/.local/log/gen-dockermgr}"
GEN_DOCKERMGR_TEMP_DIR="${GEN_DOCKERMGR_TEMP_DIR:-$HOME/.local/tmp/system_scripts/gen-dockermgr}"
GEN_DOCKERMGR_CACHE_DIR="${GEN_DOCKERMGR_CACHE_DIR:-$HOME/.cache/gen-dockermgr}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Color Settings
GEN_DOCKERMGR_OUTPUT_COLOR_1="${GEN_DOCKERMGR_OUTPUT_COLOR_1:-4}"
GEN_DOCKERMGR_OUTPUT_COLOR_2="${GEN_DOCKERMGR_OUTPUT_COLOR_2:-5}"
GEN_DOCKERMGR_OUTPUT_COLOR_GOOD="${GEN_DOCKERMGR_OUTPUT_COLOR_GOOD:-2}"
GEN_DOCKERMGR_OUTPUT_COLOR_ERROR="${GEN_DOCKERMGR_OUTPUT_COLOR_ERROR:-1}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Notification Settings
GEN_DOCKERMGR_NOTIFY_ENABLED="${GEN_DOCKERMGR_NOTIFY_ENABLED:-yes}"
GEN_DOCKERMGR_GOOD_NAME="${GEN_DOCKERMGR_GOOD_NAME:-Great:}"
GEN_DOCKERMGR_ERROR_NAME="${GEN_DOCKERMGR_ERROR_NAME:-Error:}"
GEN_DOCKERMGR_GOOD_MESSAGE="${GEN_DOCKERMGR_GOOD_MESSAGE:-No errors reported}"
GEN_DOCKERMGR_ERROR_MESSAGE="${GEN_DOCKERMGR_ERROR_MESSAGE:-Errors were reported}"
GEN_DOCKERMGR_NOTIFY_CLIENT_NAME="${GEN_DOCKERMGR_NOTIFY_CLIENT_NAME:-$APPNAME}"
GEN_DOCKERMGR_NOTIFY_CLIENT_ICON="${GEN_DOCKERMGR_NOTIFY_CLIENT_ICON:-notification-new}"
GEN_DOCKERMGR_NOTIFY_CLIENT_URGENCY="${GEN_DOCKERMGR_NOTIFY_CLIENT_URGENCY:-normal}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Additional Variables

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Generate config files
[ -f "$GEN_DOCKERMGR_CONFIG_DIR/$GEN_DOCKERMGR_CONFIG_FILE" ] ||
  [ "$*" = "--config" ] || INIT_CONFIG="${INIT_CONFIG:-TRUE}" __gen_config ${SETARGS:-$@}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Import config
[ -f "$GEN_DOCKERMGR_CONFIG_DIR/$GEN_DOCKERMGR_CONFIG_FILE" ] &&
  . "$GEN_DOCKERMGR_CONFIG_DIR/$GEN_DOCKERMGR_CONFIG_FILE"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Ensure Directories exist
[ -d "$GEN_DOCKERMGR_LOG_DIR" ] ||
  mkdir -p "$GEN_DOCKERMGR_LOG_DIR" |& __devnull
[ -d "$GEN_DOCKERMGR_TEMP_DIR" ] ||
  mkdir -p "$GEN_DOCKERMGR_TEMP_DIR" |& __devnull
[ -d "$GEN_DOCKERMGR_CACHE_DIR" ] ||
  mkdir -p "$GEN_DOCKERMGR_CACHE_DIR" |& __devnull
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
GEN_DOCKERMGR_TEMP_FILE="${GEN_DOCKERMGR_TEMP_FILE:-$(mktemp $GEN_DOCKERMGR_TEMP_DIR/XXXXXX 2>/dev/null)}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Setup trap to remove temp file
trap '__trap_exit' EXIT
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Setup notification function
__notifications() {
  __cmd_exists notifications || return
  [ "$GEN_DOCKERMGR_NOTIFY_ENABLED" = "yes" ] || return
  [ "$SEND_NOTIFICATION" = "no" ] && return
  (
    set +x
    export SCRIPT_OPTS="" _DEBUG=""
    export NOTIFY_GOOD_MESSAGE="${NOTIFY_GOOD_MESSAGE:-$GEN_DOCKERMGR_GOOD_MESSAGE}"
    export NOTIFY_ERROR_MESSAGE="${NOTIFY_ERROR_MESSAGE:-$GEN_DOCKERMGR_ERROR_MESSAGE}"
    export NOTIFY_CLIENT_ICON="${NOTIFY_CLIENT_ICON:-$GEN_DOCKERMGR_NOTIFY_CLIENT_ICON}"
    export NOTIFY_CLIENT_NAME="${NOTIFY_CLIENT_NAME:-$GEN_DOCKERMGR_NOTIFY_CLIENT_NAME}"
    export NOTIFY_CLIENT_URGENCY="${NOTIFY_CLIENT_URGENCY:-$GEN_DOCKERMGR_NOTIFY_CLIENT_URGENCY}"
    notifications "$@"
    retval=$?
    return $retval
  ) |& __devnull &
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Set custom icons

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Argument/Option settings
SETARGS=("$@")
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
SHORTOPTS=""
SHORTOPTS+=""
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
LONGOPTS="completions:,config,debug,dir:,help,options,raw,version,silent"
LONGOPTS+=""
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
ARRAY=""
ARRAY+=""
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
LIST=""
LIST+=""
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Setup application options
setopts=$(getopt -o "$SHORTOPTS" --long "$LONGOPTS" -a -n "$APPNAME" -- "$@" 2>/dev/null)
eval set -- "${setopts[@]}" 2>/dev/null
while :; do
  case "$1" in
  --raw)
    shift 1
    export SHOW_RAW="true"
    printf_column() { tee | grep '^'; }
    printf_color() { printf '%b' "$1" | tr -d '\t' | sed '/^%b$/d;s,\x1B\[ 0-9;]*[a-zA-Z],,g'; }
    ;;
  --debug)
    shift 1
    set -xo pipefail
    export SCRIPT_OPTS="--debug"
    export _DEBUG="on"
    __devnull() { tee || return 1; }
    __devnull2() { eval "$@" |& tee || return 1; }
    ;;
  --completions)
    if [ "$2" = "short" ]; then
      printf '%s\n' "-$SHORTOPTS" | sed 's|"||g;s|:||g;s|,|,-|g' | tr ',' '\n'
    elif [ "$2" = "long" ]; then
      printf '%s\n' "--$LONGOPTS" | sed 's|"||g;s|:||g;s|,|,--|g' | tr ',' '\n'
    elif [ "$2" = "array" ]; then
      printf '%s\n' "$ARRAY" | sed 's|"||g;s|:||g' | tr ',' '\n'
    elif [ "$2" = "list" ]; then
      printf '%s\n' "$LIST" | sed 's|"||g;s|:||g' | tr ',' '\n'
    else
      exit 1
    fi
    shift 2
    exit $?
    ;;
  --options)
    shift 1
    printf_blue "Current options for ${PROG:-$APPNAME}"
    [ -z "$SHORTOPTS" ] || __list_options "Short Options" "-${SHORTOPTS}" ',' '-' 4
    [ -z "$LONGOPTS" ] || __list_options "Long Options" "--${LONGOPTS}" ',' '--' 4
    [ -z "$ARRAY" ] || __list_options "Base Options" "${ARRAY}" ',' '' 4
    exit $?
    ;;
  --version)
    shift 1
    __version
    exit $?
    ;;
  --help)
    shift 1
    __help
    exit $?
    ;;
  --config)
    shift 1
    __gen_config
    exit $?
    ;;
  --silent)
    shift 1
    GEN_DOCKERMGR_SILENT="true"
    ;;
  --dir)
    CWD_IS_SET="TRUE"
    GEN_DOCKERMGR_CWD="$2"
    [ -d "$GEN_DOCKERMGR_CWD" ] || mkdir -p "$GEN_DOCKERMGR_CWD" |& __devnull
    shift 2
    ;;
  --)
    shift 1
    break
    ;;
  esac
done
