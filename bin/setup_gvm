#!/usr/bin/env bash
setup_gvm_main() {
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  PROG="$(basename "$0")"
  VERSION="202107281513-git"
  USER="${SUDO_USER:-${USER}}"
  HOME="${USER_HOME:-${HOME}}"
  SRC_DIR="${BASH_SOURCE%/*}"
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  #set opts
  trap 'exitCode=${exitCode:-$?};[ -f "$SETUP_GVM_TEMP_FILE" ] && rm -Rf "$SETUP_GVM_TEMP_FILE" &>/dev/null' EXIT

  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  ##@Version       : 202107281513-git
  # @Author        : jason
  # @Contact       : jason
  # @License       : LICENSE.md
  # @ReadME        : setup_gvm --help
  # @Copyright     : Copyright: (c) 2021 Jason Hempstead, Casjays Developments
  # @Created       : Wednesday, Jul 28, 2021 20:29 EDT
  # @File          : setup_gvm
  # @Description   :
  # @TODO          :
  # @Other         :
  # @Resource      :
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Main function file
  if [ -f "$SRC_DIR/functions.bash" ]; then
    FUNCTIONS_DIR="$SRC_DIR"
    . "$FUNCTIONS_DIR/functions.bash"
  elif [ -f "$HOME/.local/bin/functions.bash" ]; then
    FUNCTIONS_DIR="$HOME/.local/bin"
    . "$FUNCTIONS_DIR/functions.bash"
  else
    printf "\t\t\033[0;31m%s \033[0m\n" "Couldn't source the functions file from $FUNCTIONS_DIR"
    return 1
  fi
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # helper functions - See https://github.com/dfmgr/misc/blob/main/bin/functions.bash
  __version() { app_version; }
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  __help() {
    app_help "4" "Usage: setup_gvm [options]  " \
      "-c, --config           -  create config file" \
      "-v, --version          -  display version" \
      "-h, --help             -  display help" \
      "--options              -  used by completions"
    exit $?
  }
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  __gen_config() {
    printf_green "Generating the config file in"
    printf_green "$SETUP_GVM_CONFIG_DIR/$SETUP_GVM_CONFIG_FILE"
    [ -d "$SETUP_GVM_CONFIG_DIR" ] || mkdir -p "$SETUP_GVM_CONFIG_DIR"
    [ -d "$SETUP_GVM_CONFIG_BACKUP_DIR" ] || mkdir -p "$SETUP_GVM_CONFIG_BACKUP_DIR"
    [ -f "$SETUP_GVM_CONFIG_DIR/$SETUP_GVM_CONFIG_FILE" ] &&
      cp -Rf "$SETUP_GVM_CONFIG_DIR/$SETUP_GVM_CONFIG_FILE" "$SETUP_GVM_CONFIG_BACKUP_DIR/$SETUP_GVM_CONFIG_FILE.$$"
    cat <<EOF >"$SETUP_GVM_CONFIG_DIR/$SETUP_GVM_CONFIG_FILE"
# Settings for SETUP_GVM
SETUP_GVM_NOTIFY_ENABLED="yes"
SETUP_GVM_NOTIFY_CLIENT_NAME="${NOTIFY_CLIENT_NAME:-$PROG}"
SETUP_GVM_NOTIFY_CLIENT_ICON="${NOTIFY_CLIENT_ICON:-$SETUP_GVM_NOTIFY_CLIENT_ICON}"
SETUP_GVM_INSTALL_SCRIPT="${SETUP_GVM_INSTALL_SCRIPT:-https://gvm.land/x/install/install.sh}"

EOF
    if [ -f "$SETUP_GVM_CONFIG_DIR/$SETUP_GVM_CONFIG_FILE" ]; then
      printf_green "Your config file for SETUP_GVM has been created"
      true
    else
      printf_red "Failed to create the config file"
      false
    fi
  }
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  __gvm_install() {
    if [[ "$1" != "-f" ]] && cmd_exists gvm; then
      printf_green "gvm is already installed "
      printf_blue "run $PROG --install to updated"
      return 0
    else
      curl -q -LSs "$SETUP_GVM_INSTALL_SCRIPT" | bash &>/dev/null
      if type -P gvm &>/dev/null; then
        printf_green "gvm has been installed"
        return 0
      else
        printf_red "Failed to install gvm"
        return 1
      fi
    fi
  }
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Defaults
  local exitCode=""
  local SETUP_GVM_CONFIG_FILE="settings.conf"
  local SETUP_GVM_CONFIG_DIR="$HOME/.config/misc/setup_gvm"
  local SETUP_GVM_CONFIG_BACKUP_DIR="$HOME/.local/share/misc/setup_gvm/backups"
  local SETUP_GVM_OPTIONS_DIR="$HOME/.local/share/misc/setup_gvm/options"
  local SETUP_GVM_TEMP_FILE="${TMPDIR:-/tmp}/setup_gvm"
  local SETUP_GVM_NOTIFY_ENABLED="yes"
  local SETUP_GVM_NOTIFY_CLIENT_NAME="${NOTIFY_CLIENT_NAME:-$PROG}"
  local SETUP_GVM_NOTIFY_CLIENT_ICON="${NOTIFY_CLIENT_ICON:-$SETUP_GVM_NOTIFY_CLIENT_ICON}"
  local SETUP_GVM_INSTALL_SCRIPT="${SETUP_GVM_INSTALL_SCRIPT:-https://raw.githubusercontent.com/moovweb/gvm/master/binscripts/gvm-installer}"
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Argument/Option settings
  local SETARGS="$*"
  local SHORTOPTS="c,v,h,i,f"
  local LONGOPTS="options,config,version,help,force"
  local ARRAY=""
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Generate Files
  [ -f "$SETUP_GVM_CONFIG_DIR/$SETUP_GVM_CONFIG_FILE" ] || __gen_config &>/dev/null
  [ -f "$SETUP_GVM_OPTIONS_DIR/options" ] || __list_options "$SETUP_GVM_OPTIONS_DIR" &>/dev/null
  [ -f "$SETUP_GVM_OPTIONS_DIR/array" ] || __list_array "$SETUP_GVM_OPTIONS_DIR" "$ARRAY" &>/dev/null
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Import config
  if [ -f "$SETUP_GVM_CONFIG_DIR/$SETUP_GVM_CONFIG_FILE" ]; then
    . "$SETUP_GVM_CONFIG_DIR/$SETUP_GVM_CONFIG_FILE"
  fi
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # options
  local setopts=$(getopt -o "$SHORTOPTS" --long "$LONGOPTS" -a -n "$PROG" -- "$@" 2>/dev/null)
  eval set -- "${setopts}" 2>/dev/null
  while :; do
    case $1 in
    --options)
      shift 1
      __list_array "$SETUP_GVM_OPTIONS_DIR" "$ARRAY"
      __list_options "$SETUP_GVM_OPTIONS_DIR"
      exit $?
      ;;
    -v | --version)
      shift 1
      __version
      exit $?
      ;;
    -h | --help)
      shift 1
      __help
      exit $?
      ;;
    -c | --config)
      shift 1
      __gen_config
      exit $?
      ;;
    -f | --force)
      shift 1
      __gvm_install -f
      exit $?
      ;;
    --)
      shift 1
      break
      ;;
      #*) break ;;
    esac
  done
  #set -- "$SETARGS"
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Actions based on env
  export NOTIFY_CLIENT_NAME="${SETUP_GVM_NOTIFY_CLIENT_NAME}"
  export NOTIFY_CLIENT_ICON="${SETUP_GVM_NOTIFY_CLIENT_ICON}"
  if [ "$SETUP_GVM_NOTIFY_ENABLED" = "yes" ]; then
    __notifications() {
      notifications "$*" || return 1
    }
  else
    __notifications() { false; }
  fi
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Check for required applications/Network check
  cmd_exists --error bash || exit 1
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # APP Variables
  GVM_ROOT="${GVM_ROOT:-$HOME/.local/share/gvm}"
  PATH="$GVM_ROOT/bin:$PATH"
  export GVM_ROOT PATH
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # begin main app
  __gvm_install || exit 1
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # lets exit with code
  return ${exitCode:-$?}
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# execute function
setup_gvm_main "$@"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# End application
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# lets exit with code
exit ${exitCode:-$?}
