# @File          : setver
# @Description   : Set the version for git repo
# @Changelog     : Refactored for self-contained operation
# @TODO          :
# @Other         :
# @Resource      :
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Script variables
PROG="setver"
VERSION="202601061012-git"
USER="${SUDO_USER:-${USER}}"
HOME="${USER_HOME:-${HOME}}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Environment Detection
__get_os() {
  case "$(uname -s)" in
    Linux*) echo "linux" ;;
    Darwin*) echo "mac" ;;
    *BSD*) echo "bsd" ;;
    MINGW*|MSYS*|CYGWIN*) echo "windows" ;;
    *) echo "unknown" ;;
  esac
}

__is_remote() {
  [ -n "${SSH_CLIENT:-}" ] || [ -n "${SSH_TTY:-}" ] || [ -n "${SSH_CONNECTION:-}" ]
}

__has_display() {
  [ -n "${DISPLAY:-}" ] || [ -n "${WAYLAND_DISPLAY:-}" ]
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Core helper functions
__cmd_exists() { command -v "$1" >/dev/null 2>&1; }

__is_running() {
  local proc="$1"
  case "$(__get_os)" in
    mac) pgrep -x "$proc" >/dev/null 2>&1 ;;
    windows) tasklist 2>/dev/null | grep -qi "$proc" ;;
    *) pgrep -x "$proc" >/dev/null 2>&1 || pgrep -f "$proc" >/dev/null 2>&1 ;;
  esac
}

__printf_color() {
  local color="${2:-0}"
  printf "\033[0;%sm%s\033[0m\n" "$color" "$1"
}
__printf_red() { __printf_color "$1" "31"; }
__printf_green() { __printf_color "$1" "32"; }
__printf_yellow() { __printf_color "$1" "33"; }
__printf_blue() { __printf_color "$1" "34"; }
__printf_purple() { __printf_color "$1" "35"; }
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Smart notifications
__notifications() {
  local title="$1" msg="$2"

  # Remote/no display - just print to stderr
  if __is_remote || ! __has_display; then
    printf "[%s] %s\n" "$title" "$msg" >&2
    return 0
  fi

  # GUI notifications based on OS
  case "$(__get_os)" in
    mac)
      osascript -e "display notification \"$msg\" with title \"$title\"" 2>/dev/null && return 0
      ;;
    linux|bsd)
      if __cmd_exists notify-send; then
        notify-send "$title" "$msg" 2>/dev/null && return 0
      fi
      ;;
    windows)
      if __cmd_exists powershell.exe; then
        powershell.exe -Command "Add-Type -AssemblyName System.Windows.Forms; [System.Windows.Forms.MessageBox]::Show('$msg', '$title')" 2>/dev/null && return 0
      fi
      ;;
  esac

  # Fallback
  printf "[%s] %s\n" "$title" "$msg" >&2
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Git helper
__git_top_dir() {
  local dir="${1:-$PWD}"
  if [ -d "$dir/.git" ]; then
    echo "$dir"
  elif git -C "$dir" rev-parse --show-toplevel 2>/dev/null; then
    return 0
  else
    echo "$dir"
  fi
}

__git_porcelain() {
  git -C "${1:-$PWD}" rev-parse --is-inside-work-tree &>/dev/null
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Config generation
__gen_config() {
  local CONFDIR="$HOME/.config/misc/settings/setver"
  local CONFFILE="settings.conf"
  __printf_green "Generating the config file in"
  __printf_green "$CONFDIR/$CONFFILE"
  [ -d "$CONFDIR" ] || mkdir -p "$CONFDIR"
  [ -f "$CONFDIR/$CONFFILE" ] && cp -Rf "$CONFDIR/$CONFFILE" "$CONFDIR/$CONFFILE.$$"
  cat <<EOF >"$CONFDIR/$CONFFILE"
# Settings for setver
SETVER_FILE="${SETVER_FILE:-version.txt}"
SETVER_FORMAT="${SETVER_FORMAT:-%Y%m%d%H%M-git}"
SETVER_DNSVER="${SETVER_DNSVER:-%Y%m%d%S}"
EOF
  if [ -f "$CONFDIR/$CONFFILE" ]; then
    __printf_green "Your config file for $PROG has been created"
  else
    __printf_red "Failed to create the config file"
  fi
  exit $?
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Version and help
__version() { echo "$PROG $VERSION"; }

__help() {
  cat <<EOF
$PROG $VERSION - Set the version for git repo

Usage: $PROG [options] [command]

Commands:
  show             Show current version from version.txt
  dns              Show DNS serial format version
  create           Create/update version.txt file

Options:
  -v, --version    Show version
  -h, --help       Show this help
  -c, --config     Create config file
  -f, --file       Use file mode (create version.txt)
  -s, --show       Show current version

Environment:
  VERSION_DATE_FORMAT  Date format for version (default: %Y%m%d%H%M-git)
  SETVER_DNSVER        DNS serial format (default: %Y%m%d%S)

Examples:
  $PROG                # Show current date in version format
  $PROG show           # Show version from version.txt
  $PROG create         # Create version.txt with current date
  $PROG dns            # Show DNS serial format
EOF
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Main function
main() {
  local exitCode=0
  local CONFDIR="$HOME/.config/misc/settings/setver"
  local CONFFILE="settings.conf"
  local SETVER_DNSVER="${SETVER_DNSVER:-%Y%m%d%S}"
  local SETVER_FORMAT="${VERSION_DATE_FORMAT:-%Y%m%d%H%M-git}"
  local SETVER_FILE="version.txt"
  local OPTS=""
  local FILE=""
  local MYCURRDIR=""

  # Load config if exists
  [ -f "$CONFDIR/$CONFFILE" ] && . "$CONFDIR/$CONFFILE"

  # Date command helper
  datecmd() { date +"${SETVER_FORMAT}"; }

  # Check if first arg is a file
  [ -f "$1" ] && OPTS="create" && FILE="$1" && shift 1 || FILE="$SETVER_FILE"
  # Check if first arg is a directory
  [ -d "$1" ] && MYCURRDIR="$1" && shift 1 || MYCURRDIR="$(__git_top_dir "${MYCURRDIR:-$PWD}")"

  # Parse options
  while [ $# -gt 0 ]; do
    case "$1" in
      -v|--version) __version; exit 0 ;;
      -h|--help) __help; exit 0 ;;
      -c|--config) __gen_config ;;
      -f|--file) OPTS="create"; shift ;;
      -s|--show) OPTS="show"; shift ;;
      show|dns|create) OPTS="$1"; shift ;;
      --) shift; break ;;
      -*) __printf_red "Unknown option: $1"; __help >&2; exit 1 ;;
      *) break ;;
    esac
  done

  # Determine full file path
  local FULLDIR="$(__git_top_dir "$(dirname "${FILE}" 2>/dev/null)")"
  local FULLFILE="$FULLDIR/$(basename "${FILE}" 2>/dev/null)"
  local SETVER_DNSVER_VAL="$(date +"${SETVER_DNSVER}")"

  # Process commands
  case "${OPTS:-}" in
    show)
      if [ -f "$FULLFILE" ]; then
        __printf_green "$FULLFILE: $(<"$FULLFILE")"
      else
        __printf_red "$FULLFILE doesn't exist"
        exitCode=1
      fi
      ;;
    dns)
      if [ -n "$1" ]; then
        __printf_blue "${1}"
      else
        __printf_green "${SETVER_DNSVER_VAL}"
      fi
      ;;
    create)
      # Always want version in the top dir of git repo
      if __git_porcelain "$FULLFILE"; then
        FULLFILE="$(__git_top_dir "$FULLFILE")/version.txt"
      else
        FULLFILE="$PWD/version.txt"
      fi
      datecmd >"$FULLFILE"
      __printf_blue "Version set to $(<"$FULLFILE") in $FULLFILE"
      ;;
    *)
      echo ''
      __printf_purple "DNS:    $(date +"${SETVER_DNSVER}")"
      __printf_blue "Date:   $(datecmd)"
      echo ''
      ;;
  esac

  return "$exitCode"
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Execute
main "$@"
exit $?
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# end
