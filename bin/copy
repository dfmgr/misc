#!/usr/bin/env bash
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version       : 202601061012-git
# @Author        : Jason Hempstead
# @Contact       : jason@casjaysdev.pro
# @License       : WTFPL
# @ReadME        : copy --help
# @Copyright     : Copyright: (c) 2021 Jason Hempstead, CasjaysDev
# @Created       : Tuesday, Mar 23, 2021 16:33 EDT
# @File          : copy
# @Description   : copies a file and shows progress
# @Changelog     : Refactored for self-contained operation
# @TODO          :
# @Other         :
# @Resource      :
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Script variables
PROG="copy"
VERSION="202601061012-git"
USER="${SUDO_USER:-${USER}}"
HOME="${USER_HOME:-${HOME}}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Environment Detection
__get_os() {
  case "$(uname -s)" in
    Linux*) echo "linux" ;;
    Darwin*) echo "mac" ;;
    *BSD*) echo "bsd" ;;
    MINGW*|MSYS*|CYGWIN*) echo "windows" ;;
    *) echo "unknown" ;;
  esac
}

__is_remote() {
  [ -n "${SSH_CLIENT:-}" ] || [ -n "${SSH_TTY:-}" ] || [ -n "${SSH_CONNECTION:-}" ]
}

__has_display() {
  [ -n "${DISPLAY:-}" ] || [ -n "${WAYLAND_DISPLAY:-}" ]
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Core helper functions
__cmd_exists() { command -v "$1" >/dev/null 2>&1; }

__is_running() {
  local proc="$1"
  case "$(__get_os)" in
    mac) pgrep -x "$proc" >/dev/null 2>&1 ;;
    windows) tasklist 2>/dev/null | grep -qi "$proc" ;;
    *) pgrep -x "$proc" >/dev/null 2>&1 || pgrep -f "$proc" >/dev/null 2>&1 ;;
  esac
}

__printf_color() {
  local color="${2:-0}"
  printf "\033[0;%sm%s\033[0m\n" "$color" "$1"
}
__printf_red() { __printf_color "$1" "31"; }
__printf_green() { __printf_color "$1" "32"; }
__printf_yellow() { __printf_color "$1" "33"; }
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Smart notifications
__notifications() {
  local title="$1" msg="$2"

  # Remote/no display - just print to stderr
  if __is_remote || ! __has_display; then
    printf "[%s] %s\n" "$title" "$msg" >&2
    return 0
  fi

  # GUI notifications based on OS
  case "$(__get_os)" in
    mac)
      osascript -e "display notification \"$msg\" with title \"$title\"" 2>/dev/null && return 0
      ;;
    linux|bsd)
      if __cmd_exists notify-send; then
        notify-send "$title" "$msg" 2>/dev/null && return 0
      fi
      ;;
    windows)
      if __cmd_exists powershell.exe; then
        powershell.exe -Command "Add-Type -AssemblyName System.Windows.Forms; [System.Windows.Forms.MessageBox]::Show('$msg', '$title')" 2>/dev/null && return 0
      fi
      ;;
  esac

  # Fallback
  printf "[%s] %s\n" "$title" "$msg" >&2
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Version and help
__version() { echo "$PROG $VERSION"; }

__help() {
  cat <<EOF
$PROG $VERSION - Copy files with progress display

Usage: $PROG [options] <source> <destination>
       $PROG -s <source> -d <destination>

Options:
  -s, --source SRC     Specify source file
  -d, --dest DEST      Specify destination
  -v, --version        Show version
  -h, --help           Show this help

Arguments:
  source               Path to source file
  destination          Path to destination (file or directory)

Description:
  Copies a file while showing progress. Uses pv if available for
  a nice progress bar, otherwise falls back to dd with status=progress.

Examples:
  $PROG file.iso /mnt/usb/
  $PROG -s large.tar.gz -d /backup/
EOF
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Main function
main() {
  local exitCode=0
  local src=""
  local dest=""

  # Check for required applications
  if ! __cmd_exists dd; then
    __printf_red "Error: dd is required"
    exit 1
  fi

  # Parse options
  while [ $# -gt 0 ]; do
    case "$1" in
      -v|--version) __version; exit 0 ;;
      -h|--help) __help; exit 0 ;;
      -s|--source)
        src="$2"
        shift 2
        ;;
      -d|--dest)
        dest="$2"
        shift 2
        ;;
      --)
        shift
        break
        ;;
      -*)
        __printf_red "Unknown option: $1"
        __help
        exit 1
        ;;
      *)
        if [ -z "$src" ]; then
          src="$1"
        elif [ -z "$dest" ]; then
          dest="$1"
        fi
        shift
        ;;
    esac
  done

  # Validate arguments
  if [ -z "$src" ] || [ -z "$dest" ]; then
    __printf_red "Error: Source and destination are required"
    __help
    exit 1
  fi

  if [ ! -f "$src" ]; then
    __printf_red "Error: Source file does not exist: $src"
    exit 1
  fi

  # If dest is a directory, append source filename
  [[ -d "$dest" ]] && dest="$dest/$(basename "$src")"

  # Get file size
  local size
  size=$(stat -c%s "$src" 2>/dev/null || stat -f%z "$src" 2>/dev/null)

  # Copy with progress
  if __cmd_exists pv && [ -n "$size" ]; then
    dd if="$src" 2>/dev/null | pv -petrb -s "$size" 2>/dev/null | dd of="$dest" 2>/dev/null
  else
    dd if="$src" of="$dest" status=progress 2>/dev/null
  fi

  exitCode=$?

  if [ $exitCode -eq 0 ]; then
    __printf_green "Copy completed: $src -> $dest"
  else
    __printf_red "Copy failed"
  fi

  return "$exitCode"
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Execute
main "$@"
exit $?
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# end
