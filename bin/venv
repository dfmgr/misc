# fi
# done
# set -- "${SET_NEW_ARGS[@]}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Set directory to first argument
# [ -d "$1" ] && VENV_CWD="$1" && shift 1 || VENV_CWD="${VENV_CWD:-$PWD}"
VENV_CWD="$(realpath "${VENV_CWD:-$PWD}" 2>/dev/null)"
# if [ -d "$VENV_CWD" ] && cd "$VENV_CWD"; then
# if [ "$VENV_SILENT" != true ]; then
# printf_cyan "Setting working dir to $VENV_CWD"
# fi
# else
# printf_exit "💔 $VENV_CWD does not exist 💔"
# fi
export VENV_CWD
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Set actions based on variables

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Redefine functions based on options

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Check for required applications/Network check
#requiresudo "$0" "$@" || exit 2     # exit 2 if errors
cmd_exists --error --ask bash || exit 3 # exit 3 if not found
#am_i_online --error || exit 4           # exit 4 if no internet
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# APP Variables overrides
VENV_VIRTUAL_NAME="$(basename "$PWD")"
VENV_VIRTUAL_DIR="$VENV_VIRTUAL_DIR/$VENV_VIRTUAL_NAME"
[ -f "$PWD/.venv_name" ] && . "$PWD/.venv_name"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Actions based on env
VENV_VIRTUAL_DIR="${VENV_VIRTUAL_DIR//\/\///}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# begin main app
case "$1" in
list)
  [ -n "$VENV_VIRTUAL_DIR" ] || printf_exit "Please set the VENV_VIRTUAL_DIR in the config file"
  if [ $# -eq 0 ]; then
    ls -Ad "$VENV_VIRTUAL_DIR"
  elif setv -l | grep -vE 'List of virtual environments|^$' | grep -q "$1"; then
    setv -l | grep "$1"
  else
    printf_exit "You don't seem to have any virtual environments"
  fi
  ;;

activate)
  shift 1
  activate "$@" && exec bash
  ;;

deativate)
  shift 1
  [ -z "$VIRTUAL_ENV" ] && exit 0
  if builtin type deactivate 2>&1 | grep 'deactivate is a function'; then
    deactivate
  else
    printf_exit "There doesn't seem to be an active virtual environment"
  fi
  ;;

create)
  shift 1
  if [ -n "$VIRTUAL_ENV" ]; then
    printf_yellow "A virtual environment is already active"
  elif [ -d "$VENV_VIRTUAL_DIR" ]; then
    printf_red "$venv_name already exists"
  elif [ -n "$1" ] && [ ! -d "$1" ]; then
    VENV_VIRTUAL_DIR="$1"
    {
      printf '%s\n' 'VENV_VIRTUAL_NAME='"$(basename "$PWD/.venv_name")"''
      printf '%s\n' 'VENV_VIRTUAL_DIR='"$VENV_VIRTUAL_DIR"''
      printf '%s\n' 'VENV_VIRTUAL_FILE='"$VENV_VIRTUAL_DIR/bin/activate"''
    } >"$PWD/.venv_name"
  else
    printf_exit "Please provide a virtual env name"
  fi
  printf_cyan "Creating a new environment for $venv_name"
  if $VENV_PYTHON_BIN -m venv "$VENV_VIRTUAL_DIR" &>/tmp/$venv_name.log; then
    [ -f "$VENV_VIRTUAL_DIR/bin/activate" ] && . "$VENV_VIRTUAL_DIR/bin/activate"
    printf_green "virtual environment has been initiated"
    exec bash
  else
    printf_red "Failed to initiate the virtual environment"
    printf_yellow "in: $VENV_VIRTUAL_DIR"
    exit 1
  fi
  ;;

*)
  activate
  ;;

esac

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Set exit code
exitCode="${exitCode:-$?}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# End application
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# lets exit with code
exit ${exitCode:-$?}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# end
