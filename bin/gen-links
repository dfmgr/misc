#!/usr/bin/env bash
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version       : 202201210409-git
# @Author        : Jason Hempstead
# @Contact       : jason@casjaysdev.com
# @License       : LICENSE.md
# @ReadME        : gen-links --help
# @Copyright     : Copyright: (c) 2022 Jason Hempstead, Casjays Developments
# @Created       : Friday, Jan 21, 2022 21:55 EST
# @File          : gen-links
# @Description   : Create a links from a text document
# @TODO          :
# @Other         :
# @Resource      :
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
gen-links_main() {
  PROG="$(basename "$0" 2>/dev/null)"
  VERSION="202201210409-git"
  RUN_USER="${SUDO_USER:-${USER}}"
  USER="${SUDO_USER:-${USER}}"
  HOME="${USER_HOME:-${HOME}}"
  SRC_DIR="${BASH_SOURCE%/*}"
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Set bash options
  if [[ "$1" == "--debug" ]]; then shift 1 && set -xo pipefail && export SCRIPT_OPTS="--debug" && export _DEBUG="on"; fi

  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Main function file
  if [ -f "$SRC_DIR/functions.bash" ]; then
    local FUNCTIONS_DIR="$SRC_DIR"
    . "$FUNCTIONS_DIR/functions.bash"
  elif [ -f "$HOME/.local/bin/functions.bash" ]; then
    local FUNCTIONS_DIR="$HOME/.local/bin"
    . "$FUNCTIONS_DIR/functions.bash"
  else
    printf "\t\t\033[0;31m%s \033[0m\n" "Couldn't source the functions file from ${FUNCTIONS_DIR:-$SRC_DIR}"
    return 1
  fi
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # helper functions - See github.com/dfmgr/misc/bin/functions.bash
  __version() { app_version; }
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  __help() {
    app_help "4" "Usage: gen-links  " \
      "--options                              -  Show all options" \
      "-c, --config                           -  Create config file" \
      "-v, --version                          -  Display version" \
      "-h, --help                             -  Display help"

    exit $?
  }
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  __list_options() {
    printf_custom "$1" "$2: $(echo ${3:-$ARRAY} | __sed 's|:||g;s|'$4'| '$5'|g')" 2>/dev/null
  }
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  __gen_config() {
    printf_green "Generating the config file in"
    printf_green "$GEN_LINKS_CONFIG_DIR/$GEN_LINKS_CONFIG_FILE"
    [ -d "$GEN_LINKS_CONFIG_DIR" ] || mkdir -p "$GEN_LINKS_CONFIG_DIR"
    [ -d "$GEN_LINKS_CONFIG_BACKUP_DIR" ] || mkdir -p "$GEN_LINKS_CONFIG_BACKUP_DIR"
    [ -f "$GEN_LINKS_CONFIG_DIR/$GEN_LINKS_CONFIG_FILE" ] &&
      cp -Rf "$GEN_LINKS_CONFIG_DIR/$GEN_LINKS_CONFIG_FILE" "$GEN_LINKS_CONFIG_BACKUP_DIR/$GEN_LINKS_CONFIG_FILE.$$"
    cat <<EOF >"$GEN_LINKS_CONFIG_DIR/$GEN_LINKS_CONFIG_FILE"
# Settings for gen-links

# Notification settings
GEN_LINKS_GOOD_MESSAGE="${GEN_LINKS_GOOD_MESSAGE:-Everything Went OK}"
GEN_LINKS_ERROR_MESSAGE="${GEN_LINKS_ERROR_MESSAGE:-Well something seems to have gone wrong}"
GEN_LINKS_NOTIFY_ENABLED="${GEN_LINKS_NOTIFY_ENABLED:-yes}"
GEN_LINKS_NOTIFY_CLIENT_NAME="${NOTIFY_CLIENT_NAME:-$PROG}"
GEN_LINKS_NOTIFY_CLIENT_ICON="${NOTIFY_CLIENT_ICON:-$GEN_LINKS_NOTIFY_CLIENT_ICON}"

# Colorization settings
GEN_LINKS_OUTPUT_COLOR="${GEN_LINKS_OUTPUT_COLOR:-5}"
GEN_LINKS_OUTPUT_COLOR_GOOD="${GEN_LINKS_OUTPUT_COLOR_GOOD:-2}"
GEN_LINKS_OUTPUT_COLOR_ERROR="${GEN_LINKS_OUTPUT_COLOR_ERROR:-1}"

EOF
    if [ -f "$GEN_LINKS_CONFIG_DIR/$GEN_LINKS_CONFIG_FILE" ]; then
      [[ "$INIT_CONFIG" = "TRUE" ]] || printf_green "Your config file for $APPNAME has been created"
      true
    else
      printf_red "Failed to create the config file"
      false
    fi
  }
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Additional functions
  __make_html() {
    local from="$(basename "$FILE" 2>/dev/null)"
    local to="$(basename "$LINKS" 2>/dev/null)"
    cat <<EOF | tee "$LINKS" &>/dev/null
<!DOCTYPE html>
<html lang="en-US">
  <head>
    <!--
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version       :
# @Author        : Jason
# @Contact       : jason@casjaysdev.com
# @License       : WTFPL
# @ReadME        : README.md
# @Copyright     : Copyright: (c) 2021 Jason Hempstead, Casjays Developments
# @Created       : Monday Aug 02, 2021 01:34:41 EDT
# @File          : $to
# @Description   : links from $from
# @TODO          :
# @Other         :
# @Resource      :
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
-->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="Keywords" content="Casjay, CasjaysDev, Jason M. Hempstead, Website, About Me" />
    <meta name="Description" content="Created By Casjays Developments" />
    <meta name="generator" content="CasjaysDev" />
    <link rel="shortcut icon" href="https://static.casjay.net/favicon.ico" />
    <link rel="stylesheet" href="https://static.casjay.net/default-css/github-ribbon.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5/dist/darkly/bootstrap.min.css" />
    <script src="https://static.casjay.net/default-js/errorpages/isup.js" async defer></script>
    <script src="https://static.casjay.net/default-js/errorpages/homepage.js" async defer></script>
    <script src="https://static.casjay.net/default-js/errorpages/loaddomain.js" async defer></script>
    <script src="https://cdn.jsdelivr.net/npm/@widgetbot/crate@3" async defer></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5/dist/js/bootstrap.bundle.min.js" async defer></script>
    <link rel="stylesheet" type="text/css" href="https:///static.casjay.net/default-css/casjaysdev.css" />
    <!-- Begin Main Site -->
    <title>$from link list</title>
  </head>

  <!-- Begin Body -->
  <body>
    <!-- Begin Main content -->
    <div class="container">
      <div class="vh-100 align-items-center my-5">
        <h1 class="text-center">List of links from $from</h1>
        <p>------------------------------------------------------------------------------------------------------------------------<p>
  $(cat -)
        <p>------------------------------------------------------------------------------------------------------------------------<p>

    </div>
    <!-- End Footer -->
    <br />
    <!-- End Body -->
  </body>
  <!-- End Site -->
</html>

EOF
  }
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  __make_links() {
    local FORCE FILE LINKS
    FORCE="true"
    FILE="$1"
    LINKS="$2"
    [[ -f "$FILE" ]] || { printf_red "$FILE doesn't exist" && return 1; }
    if [[ "$FORCE" != "true" ]] && [[ -f "$LINKS" ]]; then
      printf_red "The file $LINKS exists"
      return 1
    fi
    while IFS= read -r line; do
      if [[ "${#line}" -lt 4 ]]; then
        echo "<p>------------------------------------------------------------------------------------------------------------------------<p>"
      else
        echo '<a href="'$line'" target="_blank">'$line'</a></br />'
      fi
    done < <(grep -v '^ *#' <"$FILE") | __make_html
  }
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Defaults
  local exitCode=
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Application Folders
  local GEN_LINKS_LOG_DIR="${GEN_LINKS_LOG_DIR:-$HOME/.local/log/gen-links}"
  local GEN_LINKS_CACHE_DIR="${GEN_LINKS_CACHE_DIR:-$HOME/.cache/gen-links}"
  local GEN_LINKS_CONFIG_DIR="${GEN_LINKS_CONFIG_DIR:-$HOME/.config/misc/settings/gen-links}"
  local GEN_LINKS_OPTIONS_DIR="${GEN_LINKS_OPTIONS_DIR:-$HOME/.local/share/misc/gen-links/options}"
  local GEN_LINKS_CONFIG_BACKUP_DIR="${GEN_LINKS_CONFIG_BACKUP_DIR:-$HOME/.local/share/misc/gen-links/backups}"
  local GEN_LINKS_TEMP_DIR="${GEN_LINKS_TEMP_DIR:-$HOME/.local/tmp/system_scripts/gen-links}"
  local GEN_LINKS_CONFIG_FILE="${GEN_LINKS_CONFIG_FILE:-settings.conf}"
  local GEN_LINKS_GOOD_MESSAGE="${GEN_LINKS_GOOD_MESSAGE:-Everything Went OK}"
  local GEN_LINKS_ERROR_MESSAGE="${GEN_LINKS_ERROR_MESSAGE:-Well something seems to have gone wrong}"
  local GEN_LINKS_NOTIFY_ENABLED="${GEN_LINKS_NOTIFY_ENABLED:-yes}"
  local GEN_LINKS_NOTIFY_CLIENT_NAME="${NOTIFY_CLIENT_NAME:-$APPNAME}"
  local GEN_LINKS_NOTIFY_CLIENT_ICON="${NOTIFY_CLIENT_ICON:-$GEN_LINKS_NOTIFY_CLIENT_ICON}"
  local GEN_LINKS_OUTPUT_COLOR="${GEN_LINKS_OUTPUT_COLOR:-5}"
  local GEN_LINKS_OUTPUT_COLOR_GOOD="${GEN_LINKS_OUTPUT_COLOR_GOOD:-2}"
  local GEN_LINKS_OUTPUT_COLOR_ERROR="${GEN_LINKS_OUTPUT_COLOR_ERROR:-1}"
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Enviroment overrides

  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Generate config files
  [ -f "$GEN_LINKS_CONFIG_DIR/$GEN_LINKS_CONFIG_FILE" ] || [[ "$*" = *config ]] || INIT_CONFIG="${INIT_CONFIG:-TRUE}" __gen_config ${SETARGS:-$@}
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Import config
  [ -f "$GEN_LINKS_CONFIG_DIR/$GEN_LINKS_CONFIG_FILE" ] && . "$GEN_LINKS_CONFIG_DIR/$GEN_LINKS_CONFIG_FILE"
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Ensure Directories exist
  [ -d "$GEN_LINKS_LOG_DIR" ] || mkdir -p "$GEN_LINKS_LOG_DIR" &>/dev/null
  [ -d "$GEN_LINKS_TEMP_DIR" ] || mkdir -p "$GEN_LINKS_TEMP_DIR" &>/dev/null
  [ -d "$GEN_LINKS_CACHE_DIR" ] || mkdir -p "$GEN_LINKS_CACHE_DIR" &>/dev/null
  local GEN_LINKS_TEMP_FILE="${GEN_LINKS_TEMP_FILE:-$(mktemp $GEN_LINKS_TEMP_DIR/XXXXXX 2>/dev/null)}"
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Setup trap to remove temp file
  trap 'exitCode=${exitCode:-$?};[ -n "$GEN_LINKS_TEMP_FILE" ] && [ -f "$GEN_LINKS_TEMP_FILE" ] && rm -Rf "$GEN_LINKS_TEMP_FILE" &>/dev/null' EXIT
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Setup notification function
  if [ "$GEN_LINKS_NOTIFY_ENABLED" = "yes" ]; then
    __notifications() {
      export NOTIFY_GOOD_MESSAGE="${GEN_LINKS_GOOD_MESSAGE}"
      export NOTIFY_ERROR_MESSAGE="${GEN_LINKS_ERROR_MESSAGE}"
      export NOTIFY_CLIENT_NAME="${GEN_LINKS_NOTIFY_CLIENT_NAME}"
      export NOTIFY_CLIENT_ICON="${GEN_LINKS_NOTIFY_CLIENT_ICON}"
      notifications "$@" && exitCode=0 || exitCode=1
      unset NOTIFY_CLIENT_NAME NOTIFY_CLIENT_ICON NOTIFY_GOOD_MESSAGE NOTIFY_ERROR_MESSAGE
      return ${exitCode:-$?}
    }
  else
    __notifications() { false; }
  fi
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Show warn message if variables are missing

  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Argument/Option settings
  local SETARGS="$*"
  local SHORTOPTS=""
  local LONGOPTS="options,config,version,help,dir:"
  local ARRAY=""
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Setup application options
  local setopts=$(getopt -o "$SHORTOPTS" --long "$LONGOPTS" -a -n "$(basename "$0" 2>/dev/null)" -- "$@" 2>/dev/null)
  eval set -- "${setopts[@]}" 2>/dev/null
  while :; do
    case "$1" in
    --options)
      shift 1
      [ -n "$1" ] || printf_blue "Current options for ${PROG:-$APPNAME}"
      [ -z "$SHORTOPTS" ] || __list_options "5" "Short Options" "-$SHORTOPTS" ',' '-'
      [ -z "$LONGOPTS" ] || __list_options "5" "Long Options" "--$LONGOPTS" ',' '--'
      [ -z "$ARRAY" ] || __list_options "5" "Base Options" "$ARRAY" ',' ''
      exit $?
      ;;
    --version)
      shift 1
      __version
      exit $?
      ;;
    --help)
      shift 1
      __help
      exit $?
      ;;
    --config)
      shift 1
      __gen_config
      exit $?
      ;;
    --dir)
      GEN_LINKS_CWD="$2"
      shift 2
      ;;
    --)
      shift 1
      break
      ;;
    esac
  done
  #set -- "$SETARGS"
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Actions based on env
  [[ $# -eq 0 ]] && printf_blue "Usage: $PROG <inFile> <outFile>" && return 1

  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Check for required applications/Network check
  cmd_exists --error bash || exit 1 # exit 1 if not found
  #am_i_online --error || exit 1     # exit 1 if no internet
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # APP Variables overrides

  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # begin main app
  __make_links "$@"

  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # lets exit with code
  return ${exitCode:-$?}
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# execute function
gen-links_main "$@"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# End application
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# lets exit with code
exit ${exitCode:-$?}
